<mvc:View
	controllerName="com.medifarma.cp.pesajeimpresionbultosaldo.controller.ImpreBultoSaldo"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
>
	<Page
		showHeader="true"
		title="{i18n>tltImpreBultoSaldo}"
		class="sapUiContentPadding sapUiResponsivePadding--header sapUiResponsivePadding--subHeader sapUiResponsivePadding--content sapUiResponsivePadding--footer"
		showNavButton="true"
		navButtonPress="onNavBack"
	>
		<content>
			<!--VBox class="sapUiSmallMargin" height="50%"></VBox-->
			<!--VBox class="sapUiSmallMargin"-->
			<f:SimpleForm
				editable="true"
				layout="ResponsiveGridLayout"
				labelSpanXL="4"
				labelSpanL="3"
				labelSpanM="4"
				labelSpanS="3"
				adjustLabelSpan="true"
				emptySpanXL="0"
				emptySpanL="4"
				emptySpanM="0"
				emptySpanS="0"
				columnsXL="2"
				columnsL="1"
				columnsM="1"
				singleContainerFullSize="false"
				visible="true"
			>
				<f:content>
					<Label text="{i18n>lblBultoFrac}"/>
					<SearchField
						placeholder="{i18n>lblSearch}"
						value="{StandardModel>/oQR/oBulto/text}"
						search="onQRSearch($event, 'IFA')"
						width="100%"
						enabled="true"
					/>
					<Button
						icon="sap-icon://qr-code"
						press="onQRScan($event, 'IFA')"
					>
						<layoutData>
							<l:GridData span="XL1 L2 M2 S2"/>
						</layoutData>
					</Button>
					<Label text="{i18n>lblCodiInsu}"/>
					<Input
						value="{FormVerificationModel>/oInsumo/codigo}"
						editable="false"
					/>
					<Label text="{i18n>lblLoteInsu}"/>
					<Input
						value="{FormVerificationModel>/oInsumo/lote}"
						editable="false"
					/>
					<Label text="{i18n>lblDecrInsu}"/>
					<TextArea
						cols="2"
						value="{FormVerificationModel>/oInsumo/descripcion}"
						editable="false"
					/>
					<!--Label text=""/>
					<ObjectStatus
						title=""
						text="{FormVerificationModel>/oInsumo/info}"
						state="Information"
						icon=""
					/-->
					<Label text="{i18n>lblCantAct}"/>
					<Input
						value="{FormVerificationModel>/oInsumo/cantidadActual}"
						editable="false"
					/>
					<core:Title text="Pesos"/>
					<Label text="{i18n>lblCantReal}"/>
					<Input
						type="Number"
						value="{FormVerificationModel>/oPeso/neto}"
						editable="false"
					/>
					<Label text="{i18n>lblTara}"/>
					<Input
						type="Number"
						value="{FormVerificationModel>/oPeso/tara}"
						valueLiveUpdate="true"
						liveChange="onLiveChangePeso"
						editable="{FormVerificationModel>/oAction/edit}"
					/>
					<Label text="{i18n>lblBruto}"/>
					<Input
						type="Number"
						value="{FormVerificationModel>/oPeso/bruto}"
						valueLiveUpdate="true"
						liveChange="onLiveChangePeso"
						editable="{FormVerificationModel>/oAction/edit}"
					/>
					<Input
						value="{FormVerificationModel>/oInsumo/umb}"
						editable="false"
					>
						<layoutData>
							<l:GridData span="XL1 L2 M2 S2"/>
						</layoutData>
					</Input>
					<core:Title text="Indicadores"/>
					<Label text="{i18n>lblCantLoteLog}"/>
					<Input
						type="Number"
						value="{FormVerificationModel>/oInsumo/cantLoteLogistico}"
						editable="false"
					/>
					<Label text="{i18n>lblStickAP}"/>
					<Input
						type="Number"
						value="{FormVerificationModel>/oInsumo/stockAlmPiso}"
						editable="false"
					/>
					<Label text="{i18n>lblDifStockAlmPiso}"/>
					<Input
						type="Number"
						value="{FormVerificationModel>/oPeso/difStockAlmPiso}"
						editable="false"
					/>
					<Label text="{i18n>lblPorcAjuste}"/>
					<Input
						type="Number"
						value="{FormVerificationModel>/oPeso/difPorcAjuste}"
						editable="false"
					>
						<layoutData>
							<l:GridData span="XL1 L2 M4 S5"/>
						</layoutData>
					</Input>
					<ObjectStatus
						visible="{FormVerificationModel>/oPeso/ajuste}"
						title=""
						text="(+/-) 0.1%"
						state="{
							path: 'FormVerificationModel>/oPeso/ajusteAuto',
							formatter: '.formatter.getBStatus'
						}"
						icon="{
							path: 'FormVerificationModel>/oPeso/ajusteAuto',
							formatter: '.formatter.getBStatusTextIcon'
						}"
					>
						<layoutData>
							<l:GridData span="XL1 L2 M5 S4"/>
						</layoutData>
					</ObjectStatus>
					<!--CheckBox
						text="Ajustar"
						selected="{= ${FormVerificationModel>/oPeso/ajusteEnMas} &amp;&amp; ${FormVerificationModel>/oPeso/ajuste} ? true : false }"
					>
						<layoutData>
							<l:GridData
								linebreak="true"
								indentL="4"
								indentM="4"
							/>
						</layoutData>
					</CheckBox-->
				</f:content>
			</f:SimpleForm>
			<!--/VBox-->
		</content>
		<footer>
			<OverflowToolbar>
				<Button
					text=""
					icon="sap-icon://print"
					type="Ghost"
					press="onPrint"
					visible="{FormVerificationModel>/oAction/print}"
				/>
				<ToolbarSpacer/>
				<Button
					text="Guardar"
					icon=""
					type="Accept"
					press="onSave"
					visible="{FormVerificationModel>/oAction/save}"
				/>
				<Button
					text="Cancelar"
					type="Reject"
					press="onCancel"
				/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>