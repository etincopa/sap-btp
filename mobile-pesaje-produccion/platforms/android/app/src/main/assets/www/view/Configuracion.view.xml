												placeholder="Selecione Impresora"
												selectedKey="{ParamsSelectModel>/oGeneral/impresora}"
												items="{
													path: 'ImpresoraModel>/'
												}"
											>
												<core:Item
													key="{ImpresoraModel>impresoraId}"
													text="{ImpresoraModel>nombre} - {ImpresoraModel>direccion}"
												/>
											</m:ComboBox>
