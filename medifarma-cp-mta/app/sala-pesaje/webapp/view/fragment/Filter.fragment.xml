<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:fb="sap.ui.comp.filterbar">
	<fb:FilterBar header="Filtros" reset="onRestoreFilters" search="onSearch" useToolbar="false" showGoOnFB="true"
		showFilterConfiguration="false" showRestoreOnFB="true" showRestoreButton="false">
		<fb:filterGroupItems>
            <fb:FilterGroupItem groupName="MANGROUP" name="B" label="{i18n>lblCentro}" partOfCurrentVariant="true" visibleInFilterBar="true">
				<fb:control>					
                    <Select selectedKey="{localModel>/Filtros/plantaId}" items="{path: 'localModel>/Plantas'}">                        
                        <core:Item key="{localModel>iMaestraId}" text="{localModel>contenido}"/>	                        											
					</Select>                      
				</fb:control>
			</fb:FilterGroupItem>			
		</fb:filterGroupItems>
	</fb:FilterBar>
</core:FragmentDefinition>