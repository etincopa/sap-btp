<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
	<Dialog
		title="{i18n>tlImpresoras}"
		contentWidth="25rem"
		busy="{MaestraModel>/UI/impBusy}"
	>
		<content>
			<f:Form>
				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanXL="3"
						labelSpanL="3"
						labelSpanM="3"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="4"
						emptySpanL="4"
						emptySpanM="4"
						emptySpanS="0"
						columnsXL="3"
						columnsL="3"
						columnsM="2"
						singleContainerFullSize="false"
					/>
				</f:layout>
				<f:formContainers>
					<f:FormContainer>
						<f:formElements>
							<f:FormElement>
								<f:label>
									<Label
										text="{i18n>dlblImpresora}"
										required="true"
									/>
								</f:label>
								<f:fields>
									<ComboBox
										value="{ImpresionModel>/valueImpresora}"
										placeholder="{i18n>dlblImpresora}"
										selectedKey="{ImpresionModel>/keyImpresora}"
										items="{
											path: 'MaestraModel>/Impresoras',
											sorter: [{
												path: 'oPlanta/descripcion',
												descending: false
											}, {
												path: 'nombre',
												descending: false
											}]
										}"
									>
										<core:Item
											key="{MaestraModel>impresoraId}"
											text="{MaestraModel>nombre}/{MaestraModel>oPlanta/descripcion}"
										/>
									</ComboBox>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
			</f:Form>
		</content>
		<beginButton/>
		<buttons>
			<Button
				text="{i18n>btnAceptar}"
				type="Emphasized"
				iconFirst="true"
				width="auto"
				press="onPressAceptarImpresion"
			/>
			<Button
				text="{i18n>btnCancelar}"
				type="Default"
				iconFirst="true"
				width="auto"
				press="onPressClose"
			/>
		</buttons>
		<customHeader/>
		<endButton/>
		<subHeader/>
	</Dialog>
</core:FragmentDefinition>