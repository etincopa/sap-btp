<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
	<fb:FilterBar
		header="Filtros"
		reset="onRestoreFilters"
		search="onSearchFilter"
		useToolbar="true"
		showGoOnFB="true"
		showFilterConfiguration="false"
		showRestoreOnFB="true"
		showRestoreButton="false"
	>
		<fb:filterGroupItems>
			<fb:FilterGroupItem
				groupName="MANGROUP"
				name="B"
				label="{i18n>lblPedido}"
				partOfCurrentVariant="true"
				visibleInFilterBar="true"
			>
				<fb:control>
					<Input
						app:controlType="Input"
						app:controlPath="Pedido_numPedido"
						app:objectiveTable="tablaPedidos"
						placeholder="{i18n>phlblPedido}"
						type="Text"
						showValueHelp="false"
						visible="true"
						width="100%"
						valueHelpOnly="false"
					/>
				</fb:control>
			</fb:FilterGroupItem>
			<fb:FilterGroupItem
				groupName="MANGROUP"
				name="A"
				label="{i18n>dclCentro}"
				partOfCurrentVariant="true"
				visibleInFilterBar="true"
			>
				<fb:control>
					<ComboBox
						id="cbxCentro"
						app:operatorEq="X"
						placeholder="{i18n>phdclCentro}"
						items="{
							path: 'CentroModel>/',
							sorter: [{
								path: 'Name1',
								descending: false
							}]
						}"
						app:controlType="ComboBox"
						app:controlPath="Pedido_centro"
						app:objectiveTable="tablaPedidos"
					>
						<core:Item
							key="{CentroModel>Bwkey}"
							text="{CentroModel>Name1}"
						/>
					</ComboBox>
				</fb:control>
			</fb:FilterGroupItem>
			<fb:FilterGroupItem
				groupName="MANGROUP"
				name="I"
				label="{i18n>lblEstaPedido}"
				partOfCurrentVariant="true"
				visibleInFilterBar="true"
			>
				<fb:control>
					<ComboBox
						app:operatorEq="X"
						app:controlType="ComboBox"
						app:controlPath="Pedido_estado_iMaestraId"
						app:objectiveTable="tablaPedidos"
						placeholder="{i18n>clEstado}"
						items="{MaestraModel>/ESTADO_CP_PEDIDO}"
					>
						<core:Item
							key="{MaestraModel>iMaestraId}"
							text="{MaestraModel>contenido}"
						/>
					</ComboBox>
				</fb:control>
			</fb:FilterGroupItem>
			<fb:FilterGroupItem
				groupName="MANGROUP"
				name="K"
				label="{i18n>lblFechaCreaPed}"
				partOfCurrentVariant="true"
				visibleInFilterBar="true"
			>
				<fb:control>
					<DateRangeSelection
						id="drsFechaRegistro"
						app:controlType="DateRange"
						app:controlPath="Pedido_fechaRegistro"
						app:objectiveTable="tablaPedidos"
						displayFormat="dd/MM/yyyy"
						valueFormat="yyyyMMdd"
						placeholder="{i18n>phlblDate}"
						
					/>
				</fb:control>
			</fb:FilterGroupItem>
			<fb:FilterGroupItem
				groupName="MANGROUP"
				name="L"
				label="{i18n>lblUsuarAsig}"
				partOfCurrentVariant="true"
				visibleInFilterBar="true"
			>
				<fb:control>
					<Input
						app:controlType="Input"
						app:controlPath="Pedido_nombreUsuario"
						app:objectiveTable="tablaPedidos"
						placeholder="{i18n>lblUsuarAsig}"
						type="Text"
						showValueHelp="false"
						visible="true"
						width="100%"
						valueHelpOnly="false"
					/>
				</fb:control>
			</fb:FilterGroupItem>
			<fb:FilterGroupItem
				groupName="MANGROUP"
				name="G"
				label="{i18n>lblOrdenProduccion}"
				partOfCurrentVariant="true"
				visibleInFilterBar="true"
			>
				<fb:control>
					<Input
						app:controlType="Input"
						app:controlPath="Orden_numOrden"
						app:objectiveTable="tablaPedidos"
						placeholder="{i18n>lblOrdenProduccion}"
						type="Text"
						showValueHelp="false"
						visible="true"
						width="100%"
						valueHelpOnly="false"
					/>
				</fb:control>
			</fb:FilterGroupItem>
			<fb:FilterGroupItem
				groupName="MANGROUP"
				name="H"
				label="{i18n>lblReserva}"
				partOfCurrentVariant="true"
				visibleInFilterBar="true"
			>
				<fb:control>
					<Input
						app:controlType="Input"
						app:controlPath="Insumo_numReserva"
						app:objectiveTable="tablaPedidos"
						placeholder="{i18n>lblReserva}"
						type="Text"
						showValueHelp="false"
						visible="true"
						width="100%"
						valueHelpOnly="false"
					/>
				</fb:control>
			</fb:FilterGroupItem>
			<fb:FilterGroupItem
				groupName="MANGROUP"
				name="E"
				label="{i18n>lblCodigoPt}"
				partOfCurrentVariant="true"
				visibleInFilterBar="true"
			>
				<fb:control>
					<Input
						app:controlType="Input"
						app:controlPath="Orden_codProdTerm"
						app:objectiveTable="tablaPedidos"
						placeholder="{i18n>lblCodigoPt}"
						type="Text"
						showValueHelp="false"
						visible="true"
						width="100%"
						valueHelpOnly="false"
					/>
				</fb:control>
			</fb:FilterGroupItem>
			<fb:FilterGroupItem
				groupName="MANGROUP"
				name="F"
				label="{i18n>dclLotePT}"
				partOfCurrentVariant="true"
				visibleInFilterBar="true"
			>
				<fb:control>
					<Input
						app:controlType="Input"
						app:controlPath="Orden_loteProdTerm"
						app:objectiveTable="tablaPedidos"
						placeholder="{i18n>dclLotePT}"
						type="Text"
						showValueHelp="false"
						visible="true"
						width="100%"
						valueHelpOnly="false"
					/>
				</fb:control>
			</fb:FilterGroupItem>
			<fb:FilterGroupItem
				groupName="MANGROUP"
				name="J"
				label="{i18n>lblEstaOrden}"
				partOfCurrentVariant="true"
				visibleInFilterBar="true"
			>
				<fb:control>
					<ComboBox
						app:operatorEq="X"
						app:controlType="ComboBox"
						app:controlPath="Orden_estado_iMaestraId"
						app:objectiveTable="tablaPedidos"
						placeholder="{i18n>lblEstaOrden}"
						items="{
							path: 'MaestraModel>/ESTADO_CP_ORDEN',
							sorter: [{
								path: 'orden',
								descending: false
							}]
						}"
					>
						<core:Item
							key="{MaestraModel>iMaestraId}"
							text="{MaestraModel>contenido}"
						/>
					</ComboBox>
				</fb:control>
			</fb:FilterGroupItem>
			<fb:FilterGroupItem
				groupName="MANGROUP"
				name="C"
				label="{i18n>lblCodigoInsumo}"
				partOfCurrentVariant="true"
				visibleInFilterBar="true"
			>
				<fb:control>
					<Input
						app:controlType="Input"
						app:controlPath="Insumo_codigo"
						app:objectiveTable="tablaPedidos"
						placeholder="{i18n>lblCodigoInsumo}"
						type="Text"
						showValueHelp="false"
						visible="true"
						width="100%"
						valueHelpOnly="false"
					/>
				</fb:control>
			</fb:FilterGroupItem>
			<fb:FilterGroupItem
				groupName="MANGROUP"
				name="D"
				label="{i18n>lblLoteInsumo}"
				partOfCurrentVariant="true"
				visibleInFilterBar="true"
			>
				<fb:control>
					<Input
						app:controlType="Input"
						app:controlPath="Insumo_lote"
						app:objectiveTable="tablaPedidos"
						placeholder="{i18n>lblLoteInsumo}"
						type="Text"
						showValueHelp="false"
						visible="true"
						width="100%"
						valueHelpOnly="false"
					/>
				</fb:control>
			</fb:FilterGroupItem>
		</fb:filterGroupItems>
	</fb:FilterBar>
</core:FragmentDefinition>