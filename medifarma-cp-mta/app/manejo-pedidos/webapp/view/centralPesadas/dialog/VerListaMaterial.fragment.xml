<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form"
	xmlns:ui="sap.ui.table"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
	<Dialog
		id="idDListaMaterial"
		title="Lista de Materiales"
		contentWidth="100%"
	>
		<content>
			<IconTabBar
				select="onIconTabBarFilter"
				class="sapUiResponsiveContentPadding"
			>
				<content>
					<ui:Table
						id="idOrdenListMaterial"
						rows="{OrdenListaMaterialModel>/}"
						selectionMode="Single"
						visibleRowCount="15"
						
						enableSelectAll="false"
						
					>
						<ui:columns>
							<ui:Column
								width="8rem"
								hAlign="Center"
							>
								<Text text="{i18n>dclCentro}"/>
								<ui:template>
									<Text
										text="{OrdenListaMaterialModel>oCentro/Name1}"
										wrapping="false"
									/>
								</ui:template>
							</ui:Column>
							<ui:Column
								width="4rem"
								hAlign="Center"
							>
								<Text text="{i18n>dclAlmacen}"/>
								<ui:template>
									<Text
										text="{OrdenListaMaterialModel>Lgort}"
										wrapping="false"
									/>
								</ui:template>
							</ui:Column>
							<ui:Column
								width="7rem"
								hAlign="Center"
							>
								<Text text="{i18n>lblCodigoInsumo}"/>
								<ui:template>
									<Text
										text="{OrdenListaMaterialModel>Matnr}"
										wrapping="false"
									/>
								</ui:template>
							</ui:Column>
							<ui:Column
								width="auto"
								hAlign="Center"
							>
								<Text text="{i18n>dclDescripMaterial}"/>
								<ui:template>
									<Text
										text="{OrdenListaMaterialModel>Maktx}"
										wrapping="false"
									/>
								</ui:template>
							</ui:Column>
							<ui:Column
								width="7rem"
								hAlign="Center"
							>
								<Text text="{i18n>lblLoteInsumo}"/>
								<ui:template>
									<Text
										text="{OrdenListaMaterialModel>Charg}"
										wrapping="false"
									/>
								</ui:template>
							</ui:Column>
							<ui:Column
								width="6rem"
								hAlign="End"
							>
								<Text
									text="{i18n>clCantReq}"
									width="auto"
									maxLines="2"
									wrapping="true"
									textAlign="Center"
									textDirection="Inherit"
								/>
								<ui:template>
									<Text
										text="{OrdenListaMaterialModel>Bdmng}"
										wrapping="false"
									/>
								</ui:template>
							</ui:Column>
							<ui:Column
								width="3rem"
								hAlign="Center"
							>
								<Text text="{i18n>clUnidad}"/>
								<ui:template>
									<Text
										text="{OrdenListaMaterialModel>Meins}"
										wrapping="false"
									/>
								</ui:template>
							</ui:Column>
						</ui:columns>
					</ui:Table>
				</content>
			</IconTabBar>
		</content>
		<beginButton/>
		<buttons>
			<Button
				text="{i18n>btnCancelar}"
				type="Default"
				iconFirst="true"
				width="auto"
				press="onCloseListaMaterial"
			/>
		</buttons>
		<customHeader/>
		<endButton/>
		<subHeader/>
	</Dialog>
</core:FragmentDefinition>