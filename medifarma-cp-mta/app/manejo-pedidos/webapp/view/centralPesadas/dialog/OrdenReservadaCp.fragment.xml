<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:ui="sap.ui.table"
	xmlns:core="sap.ui.core"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
	<Dialog
		title="{i18n>dtlOrdProducReserv}"
		contentWidth="100%"
		draggable="true"
		resizable="true"
	>
		<customHeader>
			<Bar>
				<contentLeft>
					<Title
						level="H3"
						text="{i18n>dtlOrdProducReserv}"
					/>
				</contentLeft>
			</Bar>
		</customHeader>
		<content>
			<Table
				width="auto"
				sticky="ColumnHeaders"
				items="{ComprometidaDetailModel>/}"
				updateFinished="onUpdateFinish"
				growing="true"
				growingScrollToLoad="true"
			>
				<headerToolbar>
					<OverflowToolbar>
						<Title text=""/>
						<ToolbarSpacer/>
						<ToolbarSeparator/>
						<OverflowToolbarButton
							text="{i18n>btnExport}"
							tooltip="{i18n>btnExport}"
							icon="sap-icon://excel-attachment"
							press="onExportXLSReportOR"
						/>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column
						width="auto"
						hAlign="Center"
						vAlign="Middle"
						minScreenWidth="Tablet"
						demandPopin="true"
						popinDisplay="Inline"
						mergeDuplicates="false"
					>
						<Text
							text="{i18n>dclNomProTerm}"
							width="auto"
							maxLines="2"
							wrapping="true"
							textAlign="Begin"
							textDirection="Inherit"
						/>
					</Column>
					<Column
						width="auto"
						hAlign="Center"
						vAlign="Middle"
						minScreenWidth="Tablet"
						demandPopin="true"
						popinDisplay="Inline"
						mergeDuplicates="false"
					>
						<Text
							text="{i18n>lblCodigoPt}"
							width="auto"
							maxLines="2"
							wrapping="true"
							textAlign="Begin"
							textDirection="Inherit"
						/>
					</Column>
					<Column
						width="auto"
						hAlign="Left"
						vAlign="Middle"
						minScreenWidth="Tablet"
						demandPopin="true"
						popinDisplay="Inline"
						mergeDuplicates="false"
					>
						<Text
							text="{i18n>dclLotePT}"
							width="auto"
							maxLines="2"
							wrapping="true"
							textAlign="Begin"
							textDirection="Inherit"
						/>
					</Column>
					<Column
						width="auto"
						hAlign="Left"
						vAlign="Middle"
						minScreenWidth="Tablet"
						demandPopin="true"
						popinDisplay="Inline"
						mergeDuplicates="false"
					>
						<Text
							text="{i18n>dclNroOrdenReser}"
							width="auto"
							maxLines="2"
							wrapping="true"
							textAlign="Begin"
							textDirection="Inherit"
						/>
					</Column>
					<Column
						width="6rem"
						hAlign="End"
						vAlign="Middle"
						minScreenWidth="Tablet"
						demandPopin="true"
						popinDisplay="Inline"
						mergeDuplicates="false"
					>
						<Text
							text="{i18n>dclCantSug}"
							width="auto"
							maxLines="2"
							wrapping="true"
							textAlign="End"
							textDirection="Inherit"
						/>
					</Column>
					<Column
						width="auto"
						hAlign="End"
						vAlign="Middle"
						minScreenWidth="Tablet"
						demandPopin="true"
						popinDisplay="Inline"
						mergeDuplicates="false"
					>
						<Text
							text="{i18n>dclCantReservada}"
							width="auto"
							maxLines="2"
							wrapping="true"
							textAlign="End"
							textDirection="Inherit"
						/>
					</Column>
					<Column
						width="3rem"
						hAlign="End"
						vAlign="Middle"
						minScreenWidth="Tablet"
						demandPopin="true"
						popinDisplay="Inline"
						mergeDuplicates="false"
					>
						<Text
							text="{i18n>clUnidad}"
							width="auto"
							maxLines="2"
							wrapping="true"
							textAlign="End"
							textDirection="Inherit"
						/>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<Text
							text="{ComprometidaDetailModel>DescripcionPT}"
							width="auto"
							maxLines="3"
							wrapping="true"
							textAlign="Begin"
							textDirection="Inherit"
						/>
						<Text
							text="{ComprometidaDetailModel>MaterialPT}"
							width="auto"
							maxLines="3"
							wrapping="true"
							textAlign="Begin"
							textDirection="Inherit"
						/>
						<Text
							text="{ComprometidaDetailModel>LotePT}"
							width="auto"
							maxLines="3"
							wrapping="true"
							textAlign="Begin"
							textDirection="Inherit"
						/>
						<Text
							text="{ComprometidaDetailModel>Orden}"
							width="auto"
							maxLines="3"
							wrapping="true"
							textAlign="Begin"
							textDirection="Inherit"
						/>
						<Text
							text="{ComprometidaDetailModel>CantSugerida}"
							width="auto"
							maxLines="3"
							wrapping="true"
							textAlign="End"
							textDirection="Inherit"
						/>
						<Text
							text="{ComprometidaDetailModel>CantComp}"
							width="auto"
							maxLines="3"
							wrapping="true"
							textAlign="End"
							textDirection="Inherit"
						/>
						<Text
							text="{ComprometidaDetailModel>UnidadMedida}"
							width="auto"
							maxLines="3"
							wrapping="true"
							textAlign="End"
							textDirection="Inherit"
						/>
					</ColumnListItem>
				</items>
			</Table>
		</content>
		<beginButton/>
		<buttons>
			<Button
				icon="sap-icon://decline"
				iconFirst="true"
				width="auto"
				press="onCloseDialog"
			/>
		</buttons>
		<customHeader/>
		<subHeader/>
	</Dialog>
</core:FragmentDefinition>