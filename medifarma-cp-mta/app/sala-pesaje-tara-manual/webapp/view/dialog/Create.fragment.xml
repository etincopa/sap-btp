<core:FragmentDefinition xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"

    xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <Dialog title="{i18n>lblEditarSala}" class="sapUiSizeCompact" contentWidth="600px">
        <content>

            <f:SimpleForm id="SimpleFormDisplay354"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="4"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="2"
                columnsL="2"
                columnsM="2"
                singleContainerFullSize="false" >
                <f:content>
                    <core:Title text="{i18n>tlDatosSala}" />
                    <Label text="{i18n>lblCentro}"/>
                    <Input value="{localModel>/Sala/oPlanta/contenido}" editable="false" type="Text" showValueHelp="false" visible="true" width="100%" valueHelpOnly="false"/>
                    <Label text="{i18n>lblSala}"/>
                    <Input value="{localModel>/Sala/sala}" editable="false" type="Text" showValueHelp="false" visible="true" width="100%" valueHelpOnly="false"/>
                    <Label text="{i18n>lblIP}"/>
                    <Input value="{localModel>/Sala/ipPc}" editable="false" type="Text" showValueHelp="false" visible="true" width="100%" valueHelpOnly="false"/>
                    <Label text="{i18n>lblEstadoTaraManual}" required="true"/>
                    <Select selectedKey="{localModel>/Sala/oEstadoTaraManual_iMaestraId}"  items="{path: 'localModel>/Estados'}">
                        <core:Item key="{localModel>iMaestraId}" text="{localModel>contenido}"/>
                    </Select>                                                                                           
                </f:content>
            </f:SimpleForm>

        </content>
        <beginButton/>
        <buttons>
            <Button type="Default" iconFirst="true" width="auto" icon="sap-icon://display" press="onPressLog"/>
            <Button text="{i18n>btnGuardar}" type="Default" iconFirst="true" width="auto" press="onPressSave"/>
            <Button text="{i18n>btnCancelar}" type="Default" iconFirst="true" width="auto" press="onPressClose"/>
        </buttons>
        <customHeader/>
        <endButton/>
        <subHeader/>
    </Dialog>
</core:FragmentDefinition>