<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
	<Dialog
		title="{= ${localModel>/Balanza/Editar} ? ${i18n>tlEditarBalanza} : ${i18n>tlCrearBalanza}}"
		class="sapUiSizeCompact"
		contentWidth="600px"
	>
		<content>
			<f:SimpleForm
				id="SimpleFormDisplay354"
				editable="true"
				layout="ResponsiveGridLayout"
				labelSpanXL="4"
				labelSpanL="4"
				labelSpanM="4"
				labelSpanS="4"
				adjustLabelSpan="false"
				emptySpanXL="4"
				emptySpanL="4"
				emptySpanM="4"
				emptySpanS="0"
				columnsXL="2"
				columnsL="2"
				columnsM="2"
				singleContainerFullSize="false"
			>
				<f:content>
					<core:Title text="{i18n>tlDatosBalanza}"/>
					<Label
						text="{i18n>lblCodigo}"
						required="true"
					/>
					<Input
						value="{localModel>/Balanza/codigo}"
						type="Text"
						showValueHelp="false"
						visible="true"
						width="100%"
						valueHelpOnly="false"
					/>
					<Label
						text="{i18n>lblPlanta}"
						required="true"
					/>
					<Select
						selectedKey="{localModel>/Balanza_plantaId}"
						items="{
							path: 'localModel>/Plantas'
						}"
						change="onBalanzaPlantaChange"
					>
						<core:Item
							key="{localModel>iMaestraId}"
							text="{localModel>contenido}"
						/>
					</Select>
					<Label
						text="{i18n>lblSala}"
						required="true"
					/>
					<Select
						selectedKey="{localModel>/Balanza/oSalaPesaje_salaPesajeId}"
						placeholder="{i18n>phlblSala}"
						items="{
							path: 'localModel>/Balanza_SalaPesajes'
						}"
						change="onSelectionChange"
					>
						<core:Item
							key="{localModel>salaPesajeId}"
							text="{localModel>sala}"
						/>
					</Select>
					<Label
						text="{i18n>dlblSerie}"
						required="true"
					/>
					<Input
						value="{localModel>/Balanza/serie}"
						type="Text"
						showValueHelp="false"
						visible="true"
						width="100%"
						valueHelpOnly="false"
					/>
					<Label
						text="{i18n>dlblMarca}"
						required="true"
					/>
					<Input
						value="{localModel>/Balanza/marca}"
						type="Text"
						showValueHelp="false"
						visible="true"
						width="100%"
						valueHelpOnly="false"
					/>
					<Label
						text="{i18n>dlblModelo}"
						required="true"
					/>
					<Input
						value="{localModel>/Balanza/modelo}"
						placeholder="{i18n>dphlblModelo}"
						type="Text"
						showValueHelp="false"
						visible="true"
						width="100%"
						valueHelpOnly="false"
					/>
					<Label
						text="{i18n>dlblUnidad}"
						required="true"
					/>
					<Select
						selectedKey="{localModel>/Balanza/oUnidad_iMaestraId}"
						items="{
							path: 'localModel>/Balanza_Unidades'
						}"
					>
						<core:Item
							key="{localModel>iMaestraId}"
							text="{localModel>contenido}"
						/>
					</Select>
					<Label
						text="{i18n>dlblTipoBalanza}"
						required="true"
					/>
					<Select
						selectedKey="{localModel>/Balanza/oTipoBalanza_iMaestraId}"
						items="{
							path: 'localModel>/Balanza_TipoBalanzas'
						}"
					>
						<core:Item
							key="{localModel>iMaestraId}"
							text="{localModel>contenido}"
						/>
					</Select>
					<core:Title text="{i18n>tlParametrosConexion}"/>
					<Label
						text="{i18n>dlblPuertoCom}"
						required="true"
					/>
					<Select
						selectedKey="{localModel>/Balanza/oPuertoCom_iMaestraId}"
						items="{
							path: 'localModel>/Balanza_PuertosCom'
						}"
						change="onSelectionChange"
					>
						<core:Item
							key="{localModel>iMaestraId}"
							text="{localModel>contenido}"
						/>
					</Select>
					<Label
						text="{i18n>lblConexion}"
						required="true"
					/>
					<Switch
						state="{= ${localModel>/Balanza/conexion} === 'X' ? true : false}"
						customTextOn="Si"
						customTextOff="No"
						change="onChangeConexion"
					>
						<layoutData>
							<FlexItemData growFactor="1"/>
						</layoutData>
					</Switch>
					<Label
						text="{i18n>dlblBoundRate}"
						required="true"
					/>
					<Input
						value="{localModel>/Balanza/boundRate}"
						type="Number"
						placeholder="{i18n>dphlblBoundRate}"
						showValueHelp="false"
						visible="true"
						width="100%"
						valueHelpOnly="false"
					/>
					<Label
						text="{i18n>dlblParity}"
						required="true"
					/>
					<Input
						value="{localModel>/Balanza/parity}"
						type="Number"
						placeholder="{i18n>dphlblParity}"
						showValueHelp="false"
						visible="true"
						width="100%"
						valueHelpOnly="false"
					/>
					<Label
						text="{i18n>dlblStopBits}"
						required="true"
					/>
					<Input
						value="{localModel>/Balanza/stopBits}"
						type="Number"
						placeholder="{i18n>dphlblStopBits}"
						showValueHelp="false"
						visible="true"
						width="100%"
						valueHelpOnly="false"
					/>
					<Label
						text="{i18n>dlblDataBits}"
						required="true"
					/>
					<Input
						value="{localModel>/Balanza/dataBits}"
						type="Number"
						placeholder="{i18n>dphlblDataBits}"
						showValueHelp="false"
						visible="true"
						width="100%"
						valueHelpOnly="false"
					/>
					<core:Title text="{i18n>tlDatosNumericos}"/>
					<Label
						text="{i18n>dlblCantDecimales}"
						required="true"
					/>
					<Input
						value="{localModel>/Balanza/cantidadDecimales}"
						type="Number"
						placeholder="{i18n>dphlblCantDecimales}"
						showValueHelp="false"
						visible="true"
						width="100%"
						valueHelpOnly="false"
					/>
					<Label
						text="{i18n>dlblCapMin}"
						required="true"
					/>
					<Input
						value="{localModel>/Balanza/capacidadMinimo}"
						type="Number"
						placeholder="{i18n>dphlblCapMin}"
						showValueHelp="false"
						visible="true"
						width="100%"
						valueHelpOnly="false"
					/>
					<Label
						text="{i18n>dlblCapMax}"
						required="true"
					/>
					<Input
						value="{localModel>/Balanza/capacidadMaximo}"
						type="Number"
						placeholder="{i18n>dphlblCapMax}"
						showValueHelp="false"
						visible="true"
						width="100%"
						valueHelpOnly="false"
					/>
					<Label
						text="{i18n>dlblTolerancia}"
						required="true"
					/>
					<Input
						value="{localModel>/Balanza/tolerancia}"
						type="Number"
						placeholder="{i18n>dphlblTolerancia}"
						showValueHelp="false"
						visible="true"
						width="100%"
						valueHelpOnly="false"
					/>
					<Label
						text="{i18n>dlblPrecision}"
						required="true"
					/>
					<Input
						value="{localModel>/Balanza/precision}"
						type="Number"
						placeholder="{i18n>dphlblPrecision}"
						showValueHelp="false"
						visible="true"
						width="100%"
						valueHelpOnly="false"
					/>
					<Label
						text="{i18n>dlblBalanza}"
						required="true"
					/>
				</f:content>
			</f:SimpleForm>
		</content>
		<beginButton/>
		<buttons>
			<Button
				type="Default"
				iconFirst="true"
				width="auto"
				icon="sap-icon://display"
				press="onPressLog"
			/>
			<Button
				text="{i18n>btnGuardar}"
				type="Default"
				iconFirst="true"
				width="auto"
				press="onPressSave"
			/>
			<Button
				text="{i18n>btnCancelar}"
				type="Default"
				iconFirst="true"
				width="auto"
				press="onPressClose"
			/>
		</buttons>
		<customHeader/>
		<endButton/>
		<subHeader/>
	</Dialog>
</core:FragmentDefinition>