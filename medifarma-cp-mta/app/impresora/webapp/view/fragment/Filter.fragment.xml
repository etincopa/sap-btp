<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:fb="sap.ui.comp.filterbar">
	<fb:FilterBar header="Filtros" reset="onRestoreFilters" search="onSearch" useToolbar="false" showGoOnFB="true"
		showFilterConfiguration="false" showRestoreOnFB="true" showRestoreButton="false">
		<fb:filterGroupItems>
            <fb:FilterGroupItem groupName="MANGROUP" name="B" label="{i18n>lblPlanta}" partOfCurrentVariant="true" visibleInFilterBar="true">
				<fb:control>					
                    <Select selectedKey="{localModel>/Filtros/plantaId}" items="{path: 'localModel>/Plantas'}">                        
                        <core:Item key="{localModel>iMaestraId}" text="{localModel>contenido}"/>	                        											
					</Select>                      
				</fb:control>
			</fb:FilterGroupItem>
			<fb:FilterGroupItem groupName="MANGROUP2" name="C" label="Estado" partOfCurrentVariant="true" visibleInFilterBar="true">
				<fb:control>					
                    <Select selectedKey="{localModel>/Filtros/estadoImpresora}" >
						<core:Item key="0" text="Seleccionar..."/>                        
                        <core:Item key="true" text="Activo"/>
						<core:Item key="false" text="Baja"/>	    	                        											
					</Select>                      
				</fb:control>
			</fb:FilterGroupItem>
			<fb:FilterGroupItem groupName="MANGROUP3" name="D" label="Central Pesada" partOfCurrentVariant="true" visibleInFilterBar="true">
				<fb:control>					
                    <Select selectedKey="{localModel>/Filtros/indicadorCp}" >
						<core:Item key="0" text="Seleccionar..."/>                         
                        <core:Item key="true" text="Si"/>
						<core:Item key="false" text="No"/>	    	                        											
					</Select>                      
				</fb:control>
			</fb:FilterGroupItem>
			<fb:FilterGroupItem groupName="MANGROUP4" name="E" label="Almacen" partOfCurrentVariant="true" visibleInFilterBar="true">
				<fb:control>					
                    <Select selectedKey="{localModel>/Filtros/indicadorPicking}" >
						<core:Item key="0" text="Seleccionar..."/>                        
                        <core:Item key="true" text="Si"/>
						<core:Item key="false" text="No"/>	    	                        											
					</Select>                      
				</fb:control>
			</fb:FilterGroupItem>
			<fb:FilterGroupItem groupName="MANGROUP5" name="F" label="Pesaje producciÃ³n" partOfCurrentVariant="true" visibleInFilterBar="true">
				<fb:control>					
                    <Select selectedKey="{localModel>/Filtros/indicadorEtiqueta}" > 
						<core:Item key="0" text="Seleccionar..."/>                        
                        <core:Item key="true" text="Si"/>
						<core:Item key="false" text="No"/>	    	                        											
					</Select>                      
				</fb:control>
			</fb:FilterGroupItem>			
		</fb:filterGroupItems>
	</fb:FilterBar>
</core:FragmentDefinition>