<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
	xmlns:f="sap.f"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
	<Dialog
		contentWidth="60%"
		contentHeight="64%"
		id="idDlgEditPendientePesaje"
		title="{
			path: 'localModel>/titleDialog'
		}"
	>
		<buttons>
			<Button
				text="{i18n>cerrar}"
				press="onCloseDialog"
			/>
		</buttons>
		<HBox
			class="sapUiSmallMarginTop"
			justifyContent="Center"
		>
			<f:GridContainer width="275px">
				<f:layout>
					<f:GridContainerSettings
						rowSize="85px"
						columnSize="85px"
						gap="8px"
					/>
				</f:layout>
				<!--Button class="keypad" press="onKeyPadPress" app:action="VALID" text="VALIDAR" icon="sap-icon://complete" >
                    <layoutData>
                        <f:GridContainerItemLayoutData columns="3" />
                    </layoutData>
                </Button-->
				<Button
					class="keypad"
					press="onKeyPadPress"
					text="7"
				/>
				<Button
					class="keypad"
					press="onKeyPadPress"
					text="8"
				/>
				<Button
					class="keypad"
					press="onKeyPadPress"
					text="9"
				/>
				<Button
					class="keypad"
					press="onKeyPadPress"
					text="4"
				/>
				<Button
					class="keypad"
					press="onKeyPadPress"
					text="5"
				/>
				<Button
					class="keypad"
					press="onKeyPadPress"
					text="6"
				/>
				<Button
					class="keypad"
					press="onKeyPadPress"
					text="1"
				/>
				<Button
					class="keypad"
					press="onKeyPadPress"
					text="2"
				/>
				<Button
					class="keypad"
					press="onKeyPadPress"
					text="3"
				/>
				<Button
					class="keypad"
					press="onKeyPadPress"
					app:action="DEL"
					icon="sap-icon://eraser"
				/>
				<Button
					class="keypad"
					press="onKeyPadPress"
					text="0"
				/>
				<Button
					class="keypad"
					press="onKeyPadPress"
					text="."
				/>
				<Button
					class="keypad"
					press="onAceptarManual"
					text="ACEPTAR"
				>
					<layoutData>
						<f:GridContainerItemLayoutData columns="5"/>
					</layoutData>
				</Button>
				<Button
					class="keypad"
					press="onSalirEditPesaje"
					type="Reject"
					text="SALIR"
				>
					<layoutData>
						<f:GridContainerItemLayoutData columns="5"/>
					</layoutData>
				</Button>
			</f:GridContainer>
			<VBox class="sapUiSmallMarginBegin">
				<Title
					text="{i18n>valorIngresado}:"
					titleStyle="H3"
				/>
				<HBox>
					<Title
						class="peso-box-2"
						text="{localModel>/EnterValue}"
						width="180px"
						textAlign="Center"
						titleStyle="H1"
					/>
				</HBox>
				<HBox class="sapUiSmallMarginTop">
					<Title
						text="{i18n>unidad}: "
						titleStyle="H3"
					/>
					<Title
						text="{
							path: 'localModel>/EnterValueUM'
						}"
						width="60px"
						class="sapUiSmallMarginBegin"
						titleStyle="H3"
					/>
				</HBox>
			</VBox>
		</HBox>
	</Dialog>
</c:FragmentDefinition>