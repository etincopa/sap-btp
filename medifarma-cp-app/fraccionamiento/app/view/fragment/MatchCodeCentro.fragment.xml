<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:ui="sap.ui.table"
	xmlns:core="sap.ui.core"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
	<Dialog
		id="idDialogCentroMC"
		title="Centro"
		contentWidth="45rem"
		contentHeight="30rem"
		draggable="true"
	>
		<content>
			<ui:Table
				id="idTableMatchCodeCentro"
				rows="{
					path: 'McCentroModel>/',
					sorter: [{
						path: 'codigoSap',
						descending: false
					}]
				}"
				selectionMode="Single"
				visibleRowCount="10"
				enableSelectAll="false"
				ariaLabelledBy="title"
			>
				<ui:extension>
					<OverflowToolbar style="Clear">
						<SearchField
							placeholder="Buscar"
							value=""
							search="onFilterMatchCodeCentro"
							width="50%"
							enabled="true"
						/>
					</OverflowToolbar>
				</ui:extension>
				<ui:columns>
					<ui:Column
						width="auto"
						hAlign="Left"
					>
						<Label text="{i18n>Centro}"/>
						<ui:template>
							<HBox>
								<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
									<Label text="{McCentroModel>codigoSap}"/>
									<Text text="Centro: {McCentroModel>contenido}"/>
								</VBox>
							</HBox>
						</ui:template>
					</ui:Column>
				</ui:columns>
			</ui:Table>
		</content>
		<beginButton/>
		<buttons>
			<Button
				text="Ok"
				type="Default"
				iconFirst="true"
				width="auto"
				press="onOkMatchCodeCentro"
			/>
			<Button
				text="Cerrar"
				type="Default"
				iconFirst="true"
				width="auto"
				press="onCloseDialog"
			/>
		</buttons>
		<customHeader/>
		<endButton/>
		<subHeader/>
	</Dialog>
</core:FragmentDefinition>