<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
	<Dialog
		title="{i18n>tlCrearUsuario}"
		contentWidth="100%"
	>
		<content>
			<f:Form>
				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanXL="3"
						labelSpanL="3"
						labelSpanM="4"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="4"
						emptySpanL="2"
						emptySpanM="0"
						emptySpanS="0"
						columnsXL="2"
						columnsL="2"
						columnsM="2"
						singleContainerFullSize="false"
					/>
				</f:layout>
				<f:formContainers>
					<f:FormContainer>
						<f:formElements>
							<f:FormElement>
								<f:label>
									<Label
										text="{i18n>dlblCentro}"
										required="true"
									/>
								</f:label>
								<f:fields>
									<ComboBox
										placeholder="{i18n>dphlblCentro}"
										items="{
											path: '/Planta'
										}"
										change="onSelectionChange"
									>
										<core:Item
											key="{codigo}"
											text="{nombre}"
										/>
									</ComboBox>
								</f:fields>
							</f:FormElement>
							<f:FormElement>
								<f:label>
									<Label
										text="{i18n>dlblTipoUsuario}"
										required="true"
									/>
								</f:label>
								<f:fields>
									<ComboBox
										placeholder="{i18n>dphlblTipoUsuario}"
										items="{
											path: '/TipoUsuario'
										}"
										change="onSelectionChange"
									>
										<core:Item
											key="{codigo}"
											text="{descripcion}"
										/>
									</ComboBox>
								</f:fields>
							</f:FormElement>
							<f:FormElement>
								<f:label>
									<Label
										text="{i18n>dlblNombre}"
										required="true"
									/>
								</f:label>
								<f:fields>
									<Input
										value=""
										placeholder="{i18n>dphlblNombre}"
										type="Text"
										showValueHelp="false"
										visible="true"
										width="100%"
										valueHelpOnly="false"
									/>
								</f:fields>
							</f:FormElement>
							<f:FormElement>
								<f:label>
									<Label
										text="{i18n>dlblApellidoPater}"
										required="true"
									/>
								</f:label>
								<f:fields>
									<Input
										value=""
										placeholder="{i18n>dphlblApellidoPater}"
										type="Text"
										showValueHelp="false"
										visible="true"
										width="100%"
										valueHelpOnly="false"
									/>
								</f:fields>
							</f:FormElement>
							<f:FormElement>
								<f:label>
									<Label
										text="{i18n>dlblApellidoMater}"
										required="true"
									/>
								</f:label>
								<f:fields>
									<Input
										value=""
										placeholder="{i18n>dphlblApellidoMater}"
										type="Text"
										showValueHelp="false"
										visible="true"
										width="100%"
										valueHelpOnly="false"
									/>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
					<f:FormContainer>
						<f:formElements>
							<f:FormElement>
								<f:label>
									<Label
										text="{i18n>dlblNivel}"
										required="true"
									/>
								</f:label>
								<f:fields>
									<ComboBox
										placeholder="{i18n>dphlblNivel}"
										items="{
											path: '/TipoUsuario'
										}"
										change="onSelectionChange"
									>
										<core:Item
											key="{codigo}"
											text="{descripcion}"
										/>
									</ComboBox>
								</f:fields>
							</f:FormElement>
							<f:FormElement>
								<f:label>
									<Label
										text="{i18n>dlblNumeroDoc}"
										required="true"
									/>
								</f:label>
								<f:fields>
									<Input
										value=""
										placeholder="{i18n>dphlblNumeroDoc}"
										type="Text"
										showValueHelp="false"
										visible="true"
										width="100%"
										valueHelpOnly="false"
									/>
								</f:fields>
							</f:FormElement>
							<f:FormElement>
								<f:label>
									<Label
										text="{i18n>dlblTelefono}"
										required="true"
									/>
								</f:label>
								<f:fields>
									<Input
										value=""
										placeholder="{i18n>dphlblTelefono}"
										type="Text"
										showValueHelp="false"
										visible="true"
										width="100%"
										valueHelpOnly="false"
									/>
								</f:fields>
							</f:FormElement>
							<f:FormElement>
								<f:label>
									<Label
										text="{i18n>dlblCorreo}"
										required="true"
									/>
								</f:label>
								<f:fields>
									<Input
										value=""
										placeholder="{i18n>dphlblCorreo}"
										type="Text"
										showValueHelp="false"
										visible="true"
										width="100%"
										valueHelpOnly="false"
									/>
								</f:fields>
							</f:FormElement>
							<f:FormElement>
								<f:label>
									<Label
										text="{i18n>dlblEstado}"
										required="true"
									/>
								</f:label>
								<f:fields>
									<!-- <Input value="" placeholder="{i18n>dphlblCorreo}" type="Text" showValueHelp="false" visible="true" width="100%" valueHelpOnly="false"/> -->
									<ComboBox
										placeholder="{i18n>dphlblEstado}"
										items="{
											path: '/Estado',
											parameters: {
												expand: 'modulo'
											},
											filters: [{
												path: 'modulo/codigo',
												operator: 'EQ',
												value1: 'CU'
											}]
										}"
										change="onSelectionChange"
									>
										<core:Item
											key="{codigo}"
											text="{descripcion}"
										/>
									</ComboBox>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
			</f:Form>
		</content>
		<beginButton/>
		<buttons>
			<Button
				text="{i18n>btnRegistrar}"
				type="Default"
				iconFirst="true"
				width="auto"
				press="onPressClose"
			/>
			<Button
				text="{i18n>btnCancelar}"
				type="Default"
				iconFirst="true"
				width="auto"
				press="onPressClose"
			/>
		</buttons>
		<customHeader/>
		<endButton/>
		<subHeader/>
	</Dialog>
</core:FragmentDefinition>