<mvc:View
	controllerName="mif.cp.fraccionamiento.controller.Configuracion"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
	xmlns:form="sap.ui.layout.form"
	xmlns:f="sap.f"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0"
>
	<Page>
		<customHeader>
			<Toolbar>
				<content>
					<c:Fragment
						fragmentName="mif.cp.fraccionamiento.view.fragment.Header"
						type="XML"
					/>
				</content>
			</Toolbar>
		</customHeader>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button
					text="{i18n>grabar}"
					press="onGrabarPress"
				/>
				<ToolbarSpacer/>
				<Button
					text="{i18n>regresar}"
					icon="sap-icon://undo"
					press="onRegresarPress"
				/>
			</OverflowToolbar>
		</footer>
		<IconTabBar
			id="idIconTabBarInlineMode"
			headerMode="Inline"
			expanded="{device>/isNoPhone}"
			class="sapUiResponsiveContentPadding tabBar"
		>
			<items>
				<IconTabFilter
					text="{i18n>parametrosGenerales}"
					key="parametrosGenerales"
				>
					<HBox>
						<VBox>
							<Label text="{i18n>empresa}"/>
							<Select
								selectedKey="{Country}"
								width="400px"
							>
								<items>
									<c:Item
										text="Medifarma"
										key="Medifarma"
									/>
								</items>
							</Select>
							<Label
								text="{i18n>planta}"
								required="true"
							/>
						</VBox>
					</HBox>
					<HBox>
						<Select
							selectedKey="{localModel>/Configuracion/plantaId}"
							change="onPlantaChange"
							width="400px"
							items="{
								path: 'localModel>/Plantas'
							}"
						>
							<c:Item
								key="{localModel>iMaestraId}"
								text="{localModel>contenido}"
							/>
						</Select>
						<Button
							tooltip="{i18n>actualizar}"
							icon="sap-icon://refresh"
							width="50px"
							press="onPlantaChange"
							class="sapUiTinyMarginBegin sapMBtnLarge"
						/>
					</HBox>
					<HBox>
						<VBox>
							<Label
								text="{i18n>sala}"
								required="true"
							/>
							<Select
								selectedKey="{localModel>/Configuracion/salaPesajeId}"
								width="400px"
								items="{
									path: 'localModel>/SalaPesajes'
								}"
							>
								<c:Item
									key="{localModel>salaPesajeId}"
									text="{localModel>sala}"
								/>
							</Select>
							<Label
								text="{i18n>impresora}"
								required="true"
							/>
							<Select
								selectedKey="{localModel>/Configuracion/impresora}"
								width="400px"
								items="{
									path: 'localModel>/Impresoras'
								}"
							>
								<items>
									<c:Item
										key="{localModel>impresoraId}"
										text="{localModel>nombre}"
									/>
								</items>
							</Select>
						</VBox>
					</HBox>
				</IconTabFilter>
				<IconTabFilter
					text="{i18n>conexion}"
					key="conexion"
				>
					<VBox
						alignItems="Center"
						visible="{=${localModel>/VerConexion} ? false : true}"
					>
						<VBox width="275px">
							<HBox>
								<c:Icon
									src="sap-icon://key"
									class="login-icon"
									width="50px"
									color="#031E48"
								/>
								<Input
									value="{localModel>/Clave}"
									id="txtClave"
									type="Password"
									class="login-input"
									width="220px"
								/>
							</HBox>
							<f:GridContainer width="100%">
								<f:layout>
									<f:GridContainerSettings
										rowSize="85px"
										columnSize="85px"
										gap="8px"
									/>
								</f:layout>
								<Button
									class="keypad"
									press="onKeyPadPress"
									text="7"
								/>
								<Button
									class="keypad"
									press="onKeyPadPress"
									text="8"
								/>
								<Button
									class="keypad"
									press="onKeyPadPress"
									text="9"
								/>
								<Button
									class="keypad"
									press="onKeyPadPress"
									text="4"
								/>
								<Button
									class="keypad"
									press="onKeyPadPress"
									text="5"
								/>
								<Button
									class="keypad"
									press="onKeyPadPress"
									text="6"
								/>
								<Button
									class="keypad"
									press="onKeyPadPress"
									text="1"
								/>
								<Button
									class="keypad"
									press="onKeyPadPress"
									text="2"
								/>
								<Button
									class="keypad"
									press="onKeyPadPress"
									text="3"
								/>
								<Button
									class="keypad"
									press="onKeyPadPress"
									text="0"
								/>
								<Button
									class="keypad"
									icon="sap-icon://undo"
									press="onKeyPadUndoPress"
								>
									<layoutData>
										<f:GridContainerItemLayoutData columns="2"/>
									</layoutData>
								</Button>
							</f:GridContainer>
							<Button
								text="{i18n>ingresar}"
								width="100%"
								press="onIngresarPress"
							/>
						</VBox>
					</VBox>
					<form:SimpleForm
						id="formConexion"
						width="500px"
						editable="true"
						layout="ResponsiveGridLayout"
						labelSpanXL="3"
						labelSpanL="3"
						labelSpanM="3"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="4"
						emptySpanL="4"
						emptySpanM="4"
						emptySpanS="0"
						columnsXL="1"
						columnsL="1"
						columnsM="1"
						visible="{localModel>/VerConexion}"
						singleContainerFullSize="false"
					>
						<form:content>
							<Label text="{i18n>oauth_url}"/>
							<Input
								value="{localModel>/Configuracion/oauth_url}"
								class="inputHeight"
							/>
							<Label text="{i18n>oauth_clientid}"/>
							<Input
								value="{localModel>/Configuracion/oauth_clientId}"
								class="inputHeight"
							/>
							<Label text="{i18n>oauth_clientsecret}"/>
							<Input
								value="{localModel>/Configuracion/oauth_clientSecret}"
								class="inputHeight"
							/>
							<Label text="{i18n>oauth_usuario}"/>
							<Input
								value="{localModel>/Configuracion/oauth_usuario}"
								class="inputHeight"
							/>
							<Label text="{i18n>oauth_password}"/>
							<Input
								value="{localModel>/Configuracion/oauth_password}"
								type="Password"
								class="inputHeight"
							/>
							<Label text="{i18n>odata_url}"/>
							<Input
								value="{localModel>/Configuracion/odata_url}"
								class="inputHeight"
							/>
						</form:content>
					</form:SimpleForm>
				</IconTabFilter>
			</items>
		</IconTabBar>
	</Page>
</mvc:View>