<mvc:View controllerName="com.everis.suppliers.bpupdaterequest.controller.Home" xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns="sap.m" xmlns:semantic="sap.m.semantic" xmlns:core="sap.ui.core">
	<App id="app">
		<pages>
			<Page id="page" showHeader="false">
				<content>
					<SplitContainer id="idsplit">
						<masterPages>
							<semantic:MasterPage title="{i18n>title}">
								<core:Fragment fragmentName="com.everis.suppliers.bpupdaterequest.view.fragment.ListHeader" type="XML"/>
								<!--<semantic:filter>-->
								<!--	<semantic:FilterAction press="onSemanticButtonPress"/>-->
								<!--</semantic:filter>-->
								<semantic:addAction>
									<semantic:AddAction press="onAddRequestBP" enabled="true"/>
								</semantic:addAction>
							</semantic:MasterPage>
						</masterPages>
						<detailPages>
							<Page id="page2" showHeader="false">
								<content>
									<core:Fragment fragmentName="com.everis.suppliers.bpupdaterequest.view.fragment.CreatedRequestBP" type="XML"/>
								</content>
								<footer id="footerButtons">
									<OverflowToolbar>
										<Button icon="sap-icon://message-popup" text="{count>/state}" type="Emphasized" press="onMessagesButtonPress"/>
										<ToolbarSpacer/>
										<Button id="btnTestSave" text="Test_Save" press="_onSaveDataTestOnly" visible="false" type="Ghost"/>
										<Button id="btnTestRetrieve" text="Test_Retrieve" press="_onRetrieveDataTestOnly" visible="false" type="Ghost"/>
										<ToolbarSpacer/>
                                        <Button text="{i18n>requestEdit}" press="onRequestBPEdit" visible="{requestValidationEdit>/state}"/>
										<Button type="Accept" text="{i18n>requestValidation}" press="onRequestBP" enabled="{requestValidation>/state}"/>
									</OverflowToolbar>
								</footer>
							</Page>
							<!--<semantic:DetailPage>-->
							<!--	<core:Fragment fragmentName="com.everis.suppliers.bpcreationrequest.view.fragment.CreatedRequestBP" type="XML"/>-->
							<!--	<semantic:messagesIndicator>-->
							<!--		<semantic:MessagesIndicator visible="true" press="onMessagesButtonPress"/>-->
							<!--	</semantic:messagesIndicator>-->
							<!--	<semantic:mainAction>-->
							<!--		<semantic:MainAction text="{i18n>requestValidation}" press="onRequestBP" enabled="{general>/state}"/>-->
							<!--	</semantic:mainAction>-->
							<!--</semantic:DetailPage>-->
						</detailPages>
					</SplitContainer>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>