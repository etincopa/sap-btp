<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">

	<TableSelectDialog
	    class="sapUiSizeCompact"
		noDataText="No se encontraron emisores"
		title="Emisor"
		search=".emisor.handleEmisorSearch"
		confirm=".emisor._handleEmisorClose"
		cancel=".emisor._handleEmisorClose"
		items="{
			path : 'EmisorSet>/d/results'
		}">
		<ColumnListItem>
			<cells>
				<Text text="{EmisorSet>Numero}" />
				<Text text="{EmisorSet>Nombre}" />
			   	<Text text="{EmisorSet>Poblacion}" />
			   	<Text text="{EmisorSet>CodigoPostal}" />
				<Text text="{EmisorSet>Busqueda}" />
			</cells>
		</ColumnListItem>
		<columns>
			
			<Column hAlign="Center">
				<header>
					<Text text="Numero" />
				</header>
			</Column>
			
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="Center">
				<header>
					<Text text="Nombre" />
				</header>
			</Column>
			
			<Column	hAlign="Center">
				<header>
					<Text text="Población" />
				</header>
			</Column>
			
			<Column	hAlign="Center">
				<header>
					<Text text="Código Postal" />
				</header>
			</Column>
			
			<Column	hAlign="Center">
				<header>
					<Text text="Búsqueda" />
				</header>
			</Column>
		
		</columns>
	</TableSelectDialog>
	
	
</core:FragmentDefinition>