<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog class="sapUiSizeCompact" type="Standard" showHeader="false" state="None" draggable="true" contentWidth="70%">
		<customHeader>
			<Toolbar class="sapUiContentPadding">
				<Title text="{/Titulo}" titleStyle="H5" class="sapUiSmallMarginBegin"/>
				<ToolbarSpacer/>
				<core:Icon src="sap-icon://decline" size="1.3rem" class="sapUiSmallMarginEnd setPointer" press=".calas.onCloseMuestreo"/>
			</Toolbar>
		</customHeader>
		<content>
			<Table id="tblMuestreo" inset="false" items="{ path: 'MuestreoCalaSet>/d/results' }" updateFinished=".calas.onUpdFinTblMuestreo"
				mode="SingleSelectLeft">
				<headerToolbar>
					<OverflowToolbar>
						<content>
							<Title text="Muestreo" titleStyle="H4"/>
							<ToolbarSpacer/>
							<OverflowToolbarButton type="Transparent" text="Agregar" icon="sap-icon://add" tooltip="Agregar" visible="{Configuracion>/Editable}"
								press=".calas.addMuestreoCala"/>
							<OverflowToolbarButton type="Transparent" text="Eliminar" icon="sap-icon://delete" tooltip="Eliminar" visible="{Configuracion>/Editable}"
								press=".calas.deleteMuestreoCala"/>
							<Button type="Transparent" text="Detalle" icon="sap-icon://table-chart" tooltip="Detalle" press=".calas.onPressShowTallaEspecie"/>
							<!-- <OverflowToolbarButton type="Transparent" text="Refresh" icon="sap-icon://refresh" tooltip="Refresh" press=".calas.onRefreshMuestreo"/> -->
							<OverflowToolbarButton type="Transparent" text="Excel" icon="sap-icon://excel-attachment" tooltip="Excel" press=".calas.onXLSMuestreo"/>
						</content>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column width="5%">
						<Text text="N°"/>
					</Column>
					<Column width="10%">
						<Text text="Especie"/>
					</Column>
					<Column width="10%">
						<Text text="Descripción"/>
					</Column>
					<Column width="15%" minScreenWidth="Tablet" demandPopin="true">
						<Text text="Porc. Muestreo"/>
					</Column>
					<Column width="15%" minScreenWidth="Tablet" demandPopin="true">
						<Text text="Moda"/>
					</Column>
					<Column width="15%" minScreenWidth="Tablet" demandPopin="true">
						<Text text="Talla mínima"/>
					</Column>
					<Column width="15%" minScreenWidth="Tablet" demandPopin="true">
						<Text text="Talla máxima"/>
					</Column>
					<Column width="15%" minScreenWidth="Tablet" demandPopin="true">
						<Text text="Cantidad"/>
					</Column>
					<Column width="15%" minScreenWidth="Tablet" demandPopin="true">
						<Text text="% Juve"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem >
						<cells>
							<Text text="{MuestreoCalaSet>Nummuestreo}"/>
							<Text text="{MuestreoCalaSet>Especie}"/>
							<Text text="{MuestreoCalaSet>Descripcion}"/>
							<Text text="{MuestreoCalaSet>Porcentaje}"/>
							<Text text="{MuestreoCalaSet>Moda}"/>
							<Text text="{MuestreoCalaSet>Tmin}"/>
							<Text text="{MuestreoCalaSet>Tmax}"/>
							<Text text="{MuestreoCalaSet>Cantidad}"/>
							<Text text="{MuestreoCalaSet>Juve}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Dialog>
</core:FragmentDefinition>