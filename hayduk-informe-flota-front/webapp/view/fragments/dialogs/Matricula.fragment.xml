<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">

	<TableSelectDialog
	    class="sapUiSizeCompact"
		noDataText="No se encontraron matrículas"
		title="Número de Matrícula de Embarcación"
		search=".matriculas.handleMatriculaSearch"
		confirm=".matriculas._handleMatriculaClose"
		cancel=".matriculas._handleMatriculaClose"
		items="{
			path : 'MatriculaSet>/d/results'
		}">
		<ColumnListItem>
			<cells>
				<Text text="{MatriculaSet>Numero}" />
				<Text text="{MatriculaSet>PtoInscripcion}" />
				<Text text="{MatriculaSet>Calado}" />
			   	<Text text="{MatriculaSet>Nombre}" />
			</cells>
		</ColumnListItem>
		<columns>
			
			<Column hAlign="Center">
				<header>
					<Text text="Num Matrícula" />
				</header>
			</Column>
			
			<Column
				minScreenWidth="Tablet"
				demandPopin="true" 
				hAlign="Center">
				<header>
					<Text text="Pto. Inscripción" />
				</header>
			</Column>
			
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="Center">
				<header>
					<Text text="Tipo de calado" />
				</header>
			</Column>
			
			<Column	hAlign="Center">
				<header>
					<Text text="Nombre" />
				</header>
			</Column>
		
		</columns>
	</TableSelectDialog>
	
	
</core:FragmentDefinition>