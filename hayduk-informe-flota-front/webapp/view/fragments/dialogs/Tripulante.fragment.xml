<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">

	<TableSelectDialog
	    class="sapUiSizeCompact"
		noDataText="No se encontraron tripulantes"
		title="Tripulantes"
		search=".tripulante.handleTripulanteSearch"
		confirm=".tripulante._handleTripulanteClose"
		cancel=".tripulante._handleTripulanteClose"
		items="{
			path : 'TripulanteSet>/d/results'
		}">
		<ColumnListItem>
			<cells>
				<Text text="{TripulanteSet>Dni}" />
				<Text text="{TripulanteSet>Nombre}" />
				<Text text="{TripulanteSet>Cargo}" />
			   	<Text text="{TripulanteSet>CargoDesc}" />
			</cells>
		</ColumnListItem>
		<columns>
			
			<Column hAlign="Center">
				<header>
					<Text text="DNI" />
				</header>
			</Column>
			
			<Column
				minScreenWidth="Tablet"
				demandPopin="true" 
				hAlign="Center">
				<header>
					<Text text="Nombre" />
				</header>
			</Column>
			
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="Center">
				<header>
					<Text text="Cargo" />
				</header>
			</Column>
			
			<Column	hAlign="Center">
				<header>
					<Text text="DescripciÃ³n" />
				</header>
			</Column>
		
		</columns>
	</TableSelectDialog>
	
	
</core:FragmentDefinition>