<mvc:View
	controllerName="mif.cp.fraccionamiento.controller.Home"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.f"
	displayBlock="true"
	xmlns:c="sap.ui.core"
	xmlns="sap.m"
>
	<Page
		id="page"
		title="CENTRAL PESADAS"
		subHeader="xxxx"
	>
		<customHeader>
			<Toolbar>
				<content>
					<c:Fragment
						fragmentName="mif.cp.fraccionamiento.view.fragment.Header"
						type="XML"
					/>
				</content>
			</Toolbar>
		</customHeader>
		<content class="sapUiMediumMarginTop">
			<HBox
				class="sapUiMediumMarginTop"
				justifyContent="Center"
			>
				<VBox width="380px">
					<HBox width="100%">
						<c:Icon
							src="sap-icon://customer"
							class="login-icon"
							width="50px"
							color="#031E48"
						/>
						<Input
							id="txtUsuario"
							value="{localModel>/Usuario}"
							class="login-input inputQR"
							liveChange="onPress"
							width="330px"
						/>
					</HBox>
					<HBox width="100%">
						<c:Icon
							src="sap-icon://key"
							class="login-icon"
							width="50px"
							color="#031E48"
						/>
						<Input
							id="txtPassword"
							type="Password"
							value="{localModel>/Clave}"
							class="login-input inputQR"
							width="330px"
							submit="onIngresarPress"
						/>
					</HBox>
					<f:GridContainer width="100%">
						<f:layout>
							<f:GridContainerSettings
								rowSize="110px"
								columnSize="120px"
								gap="10px"
							/>
						</f:layout>
						<Button
							class="keypad"
							press="onKeyPadPress"
							text="7"
						/>
						<Button
							class="keypad"
							press="onKeyPadPress"
							text="8"
						/>
						<Button
							class="keypad"
							press="onKeyPadPress"
							text="9"
						/>
						<Button
							class="keypad"
							press="onKeyPadPress"
							text="4"
						/>
						<Button
							class="keypad"
							press="onKeyPadPress"
							text="5"
						/>
						<Button
							class="keypad"
							press="onKeyPadPress"
							text="6"
						/>
						<Button
							class="keypad"
							press="onKeyPadPress"
							text="1"
						/>
						<Button
							class="keypad"
							press="onKeyPadPress"
							text="2"
						/>
						<Button
							class="keypad"
							press="onKeyPadPress"
							text="3"
						/>
						<Button
							class="keypad"
							press="onKeyPadPress"
							text="0"
						/>
						<Button
							class="keypad"
							icon="sap-icon://undo"
							press="onKeyPadUndoPress"
						>
							<layoutData>
								<f:GridContainerItemLayoutData columns="2"/>
							</layoutData>
						</Button>
					</f:GridContainer>
					<Button
						text="{i18n>aceptar}"
						width="100%"
						press="onIngresarPress"
						class="sapMBtnLogin"
					/>
					<Button
						text="{i18n>salir}"
						press="onSalirPress"
						type="Reject"
						width="100%"
						class="sapMBtnLogin"
					/>
				</VBox>
			</HBox>
		</content>
	</Page>
</mvc:View>