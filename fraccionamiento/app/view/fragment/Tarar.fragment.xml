<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
	xmlns:f="sap.f"
>
	<Dialog
		contentWidth="800px"
		contentHeight="600px"
		id="dialogTarar"
		title="{i18n>bultosEnteros}"
	>
		<buttons>
			<Button
				text="{i18n>actualizaBulto}"
				press="onActualizarPress"
			/>
			<Button
				text="{i18n>cerrar}"
				press="onCloseDialog"
			/>
		</buttons>
		<HBox
			class="sapUiSmallMarginTop"
			justifyContent="Center"
		>
			<f:GridContainer width="275px">
				<f:layout>
					<f:GridContainerSettings
						rowSize="85px"
						columnSize="85px"
						gap="8px"
					/>
				</f:layout>
				<Button
					class="keypad"
					press="onKeyPadUndoPress"
					icon="sap-icon://undo"
				>
					<layoutData>
						<f:GridContainerItemLayoutData columns="3"/>
					</layoutData>
				</Button>
				<Button
					class="keypad"
					press="onKeyPadPress"
					text="7"
				/>
				<Button
					class="keypad"
					press="onKeyPadPress"
					text="8"
				/>
				<Button
					class="keypad"
					press="onKeyPadPress"
					text="9"
				/>
				<Button
					class="keypad"
					press="onKeyPadPress"
					text="4"
				/>
				<Button
					class="keypad"
					press="onKeyPadPress"
					text="5"
				/>
				<Button
					class="keypad"
					press="onKeyPadPress"
					text="6"
				/>
				<Button
					class="keypad"
					press="onKeyPadPress"
					text="1"
				/>
				<Button
					class="keypad"
					press="onKeyPadPress"
					text="2"
				/>
				<Button
					class="keypad"
					press="onKeyPadPress"
					text="3"
				/>
				<Button
					class="keypad"
					press="onKeyPadPress"
					text="0"
				>
					<layoutData>
						<f:GridContainerItemLayoutData columns="2"/>
					</layoutData>
				</Button>
				<Button
					class="keypad"
					press="onKeyPadPress"
					text="."
				/>
			</f:GridContainer>
			<VBox class="sapUiSmallMarginBegin">
				<Title
					text="{i18n>valorIngresado}:"
					titleStyle="H3"
				/>
				<HBox>
					<Title
						class="peso-box-2"
						text="{
							path: 'localModel>/Tarar_Tara',
							formatter: '.formatter.peso'
						}"
						width="250px"
						textAlign="Center"
						titleStyle="H1"
					/>
				</HBox>
				<HBox class="sapUiSmallMarginTop">
					<Title
						text="{i18n>unidad}: "
						titleStyle="H3"
					/>
					<Title
						text="G"
						width="60px"
						class="sapUiSmallMarginBegin"
						titleStyle="H3"
					/>
				</HBox>
			</VBox>
		</HBox>
	</Dialog>
</c:FragmentDefinition>