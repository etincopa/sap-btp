<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
	xmlns:f="sap.f"
>
	<Dialog
		contentWidth="650px"
		contentHeight="520px"
		id="dialogTaraManual"
		title="{i18n>taraManual} "
	>
		<beginButton>
			<Button
				text="{i18n>aceptar}"
				press="onAceptarPress"
				width="130px"
			/>
		</beginButton>
		<endButton>
			<Button
				text="{i18n>cancelar}"
				press="onCancelarPress"
				width="130px"
			/>
		</endButton>
		<HBox
			class="sapUiSmallMarginTop"
			justifyContent="Center"
		>
			<f:GridContainer width="275px">
				<f:layout>
					<f:GridContainerSettings
						rowSize="85px"
						columnSize="85px"
						gap="8px"
					/>
				</f:layout>
				<Button
					class="keypad"
					press="onKeyPadUndoPress"
					icon="sap-icon://undo"
				>
					<layoutData>
						<f:GridContainerItemLayoutData columns="3"/>
					</layoutData>
				</Button>
				<Button
					class="keypad"
					press="onKeyPadPress"
					text="7"
				/>
				<Button
					class="keypad"
					press="onKeyPadPress"
					text="8"
				/>
				<Button
					class="keypad"
					press="onKeyPadPress"
					text="9"
				/>
				<Button
					class="keypad"
					press="onKeyPadPress"
					text="4"
				/>
				<Button
					class="keypad"
					press="onKeyPadPress"
					text="5"
				/>
				<Button
					class="keypad"
					press="onKeyPadPress"
					text="6"
				/>
				<Button
					class="keypad"
					press="onKeyPadPress"
					text="1"
				/>
				<Button
					class="keypad"
					press="onKeyPadPress"
					text="2"
				/>
				<Button
					class="keypad"
					press="onKeyPadPress"
					text="3"
				/>
				<Button
					class="keypad"
					press="onKeyPadPress"
					text="0"
				>
					<layoutData>
						<f:GridContainerItemLayoutData columns="2"/>
					</layoutData>
				</Button>
				<Button
					class="keypad"
					press="onKeyPadPress"
					text="."
				/>
			</f:GridContainer>
			<VBox class="sapUiSmallMarginBegin">
				<Title
					text="{i18n>valorIngresado}:"
					titleStyle="H3"
				/>
				<HBox>
					<Title
						class="peso-box-5"
						text="{localModel>/IngresoManual_Tara}"
						width="250px"
						textAlign="Center"
						titleStyle="H1"
					/>
				</HBox>
				<HBox class="sapUiSmallMarginTop">
					<Title
						text="{i18n>unidad}: "
						titleStyle="H3"
					/>
					<Title
						text="{localModel>/IngresoManual_Unidad}"
						width="60px"
						class="sapUiSmallMarginBegin"
						titleStyle="H3"
					/>
				</HBox>
			</VBox>
		</HBox>
	</Dialog>
</c:FragmentDefinition>