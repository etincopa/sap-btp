	<Dialog
		contentWidth="1050px"
		contentHeight="500px"
		id="idDlgTecladoAlfaNumericoTras"
		title="{
			path: 'localModel>/titleDialog'
		}"
	>
		<beginButton>
			<Button
				text="{i18n>aceptar}"
				press="onAceptarTeclado"
				width="130px"
			/>
