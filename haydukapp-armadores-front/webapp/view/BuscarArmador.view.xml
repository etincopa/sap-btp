<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="com.sap.build.standard.proyectoScp.controller.BuscarArmador" xmlns:m="sap.m"
	xmlns:core="sap.ui.core">
	<m:Page id="buscarArmadorPage" showHeader="true" title="Crear armadores" showFooter="true" showNavButton="false" enableScrolling="false">
		<m:content>
			<m:IconTabBar id="iconTabBar" expandable="false" expanded="true" applyContentPadding="false" backgroundDesign="Solid" upperCase="false" visible="true"
				selectedKey="Ok" stretchContentHeight="true">
				<m:items>
					<m:IconTabFilter icon="sap-icon://search" iconColor="Default" text="Existentes en SAP" count="" design="Horizontal" showAll="false"
						textDirection="Inherit" enabled="true" visible="true" iconDensityAware="false" key="Ok">
						<m:content>
							<m:List mode="SingleSelectMaster" width="100%" backgroundDesign="Solid" showSeparators="All" showNoData="false">
									<m:headerToolbar>
										<m:Toolbar visible="true" enabled="true" width="" design="Solid">
											<m:content>
												<m:SearchField id="searchCombo" placeholder="Buscar Armadores..." showSearchButton="true" visible="true" width="100%"
													search="onSearchExistent"/>
											</m:content>
										</m:Toolbar>
									</m:headerToolbar>
							</m:List>	
							<m:ScrollContainer height="90%" width="100%" horizontal="false" vertical="true">
								<m:List id="lstExist" items="{path:'/ShipownerExistSAPSet'}" mode="SingleSelectMaster" width="100%" headerText="" footerText=""
									backgroundDesign="Solid" showSeparators="All" growing="true" growingThreshold="20" growingScrollToLoad="true" itemPress="onItemPress"
									noDataText="No hay datos">
									<m:infoToolbar>
										<m:Toolbar width="100%" height="auto" design="Auto" visible="false" enabled="true">
											<m:content>
												<m:Label text="Label" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit"/>
											</m:content>
										</m:Toolbar>
									</m:infoToolbar>
									<m:headerToolbar>
									</m:headerToolbar>
									<m:items>
										<m:ObjectListItem intro="{Ruc}" title="{BusinessName}" number="" numberUnit="" numberState="None" type="Active" selected="false"
											showMarkers="false">
											<m:attributes/>
											<m:firstStatus/>
											<m:secondStatus/>
										</m:ObjectListItem>
									</m:items>
								</m:List>
							</m:ScrollContainer>
						</m:content>
					</m:IconTabFilter>
					<m:IconTabSeparator icon="" iconDensityAware="false"/>
					<m:IconTabFilter icon="sap-icon://notes" iconColor="Critical" text="Rechazados" count="" design="Horizontal" showAll="false"
						textDirection="Inherit" enabled="true" visible="true" iconDensityAware="false" key="keyRejected">
						<m:content>
							<m:Table width="100%" showNoData="false" mode="None" showSeparators="All">
								<m:headerToolbar>
									<m:Toolbar visible="true" enabled="true" width="" design="Solid">
										<m:content>
											<m:SearchField id="searchFieldRejected" placeholder="Buscar Armadores..." showSearchButton="true" visible="true" width="100%" search="onSearchRejected"/>
										</m:content>
										<m:tooltip/>
									</m:Toolbar>
								</m:headerToolbar>
								<m:columns>
									<m:Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
										<m:header>
											<m:Text text="RUC" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
										</m:header>
										<m:footer/>
									</m:Column>
									<m:Column width="auto" hAlign="Left" vAlign="Top" popinDisplay="Inline" mergeDuplicates="false">
										<m:header>
											<m:Text text="Nombre de armador" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
										</m:header>
										<m:footer/>
									</m:Column>
									<m:Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
										<m:header>
											<m:Text text="Estado" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
										</m:header>
										<m:footer/>
									</m:Column>
								</m:columns>
							</m:Table>
							<m:ScrollContainer height="78%" width="100%" horizontal="false" vertical="true">
							<m:Table id="tblRejected" items="{path:'/ShipownerRejectedSet'}" width="100%" noDataText="No hay datos" mode="None" showSeparators="All"
								growing="true" growingThreshold="20" growingScrollToLoad="true">
								<m:columns>
									<m:Column></m:Column>
									<m:Column></m:Column>
									<m:Column></m:Column>
								</m:columns>
								<m:items>
									<m:ColumnListItem type="Active">
										<m:cells>
											<m:ObjectIdentifier title="" text="{Ruc}" titleActive="false" visible="true"/>
											<m:ObjectIdentifier title="" text="{BusinessName}" titleActive="false" visible="true"/>
											<m:Button icon="sap-icon://message-warning" type="Transparent" tooltip="Ver detalles" press="onLogPress">
												<m:customData>
													<core:CustomData key="color" value="orange" writeToDom="true"/>
												</m:customData>
											</m:Button>
										</m:cells>
									</m:ColumnListItem>
								</m:items>
							</m:Table>
						</m:ScrollContainer>
						</m:content>
					</m:IconTabFilter>
				</m:items>
				<m:content/>
			</m:IconTabBar>
		</m:content>
		<m:footer>
			<m:Bar design="Auto">
				<m:contentLeft>
					<m:Button text="Crear armador" type="Accept" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"
						press="onCrearArmadorPress"/>
				</m:contentLeft>
				<m:contentMiddle/>
				<m:contentRight>
					<m:Button text="" type="Back" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="onNavBack"/>
				</m:contentRight>
			</m:Bar>
		</m:footer>
		<m:headerContent/>
		<m:subHeader/>
		<m:customHeader/>
	</m:Page>
</mvc:View>