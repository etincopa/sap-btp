        "sqlite3": "^5.0.6"
    },
    "scripts": {
        "start": "cds run",
        "undeploy": "cf undeploy cp-mta --delete-services --delete-service-keys"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "cds": {
        "requires": {
            "db": {
                "kind": "hana"
            },
            "Z_PP_CENTRALPESADAS_SRV": {
                "kind": "odata-v2",
                "model": "srv/external/Z_PP_CENTRALPESADAS_SRV",
                "credentials": {
                    "destination": "S4H_HTTP_BASIC_CP",
                    "path": "/sap/opu/odata/sap/Z_PP_CENTRALPESADAS_SRV",
                    "requestTimeout": 30000
                },
                "pool": {
                    "min": 1,
                    "max": 10
                }
            },
            "OpenWeatherApi": {
                "kind": "rest",
                "impl": "srv/external/validate.js",
                "credentials": {
                    "url": "https://ao1k9k5jk.accounts.ondemand.com/service/users/password"
                }
            }
        },
        "hana": {
            "deploy-format": "hdbtable"
        },
        "uaa": {
            "kind": "xsuaa",
            "credentials": {}
        },
        "auth": {
            "passport": {
                "strategy": "JWT"
            }
        }
    }
}
