        "hdb": "^0.18.3",
        "@sap/cds-dk": "^4.9.3",
        "@sap/cds-odata-v2-adapter-proxy": "^1.8.16",
        "@sap/hana-client": "^2.12.22",
        "@sap/xsenv": "^3.2.2",
        "@sap/xssec": "^3.2.13",
        "axios": "^0.27.2",
        "body-parser": "^1.20.0",
        "btoa": "^1.2.1",
        "cdse": "^1.1.12",
        "cors": "^2.8.5",
        "cron": "^1.8.2",
