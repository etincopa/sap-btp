<core:FragmentDefinition controllerName="everis.apps.entregasRendir.controller.main" xmlns:core="sap.ui.core" displayBlock="true"
	xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<List id="idListaSolicitud" items="{ path: '/', sorter: {path:'ParkedDocument', descending: true} }" mode="None"
		includeItemInSelection="true">
		<items >
			<CustomListItem  type="Navigation" press="onSeleccionSolicitud" tooltip="{tooltip}">
				<HBox>
					<core:Icon size="2rem" src="sap-icon://monitor-payments" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"
						color="{ path: 'Status', formatter: '.formatter.formatIconColor'}"/>
					<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
						<Label text="Solicitud de E.R. NÂ°{ParkedDocument}" class="lTituloMaster"/>
						<l:HorizontalLayout>
							<Label text="Fecha: " design="Bold"/>
							<Label text="{ path: 'Bldat', formatter: '.formatter.setFormatterDate'}"/>
						</l:HorizontalLayout>
						<l:HorizontalLayout >
							<Label text="Importe: " design="Bold"/>
							<ObjectNumber class="sapUiSmallMarginBottom" number=" {Wrbtr}" unit="{Waers}" state="Success"/>
						</l:HorizontalLayout>
						<l:HorizontalLayout visible="{FlagRev}">
							<ObjectNumber class="sapUiSmallMarginBottom" number="{=${FlagRev} === true ? 'Anulado' :''}" state="Error"/>
						</l:HorizontalLayout>
					</VBox>
				</HBox>
			</CustomListItem>
		</items>
	</List>
</core:FragmentDefinition>