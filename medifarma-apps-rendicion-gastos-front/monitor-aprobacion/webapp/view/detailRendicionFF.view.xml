														<Text text="{path:'Mwskz', formatter:'.formatIndImp'}"/>
														<Button id="btnAdjuntoDetalleGasto" press="onOpenDialogRencicionPosicion" icon="sap-icon://attachment" tooltip="Adjuntar archivo"
