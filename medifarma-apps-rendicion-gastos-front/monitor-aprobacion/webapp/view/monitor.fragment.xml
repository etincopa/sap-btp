<core:FragmentDefinition xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" height="100%"
	controllerName="com.everis.monitorDocumentos.controller.main">
	<Table id="pedidosTable" width="100%" visible="true" noDataText="No se encontraron registros" mode="None" showSeparators="All"
		growing="true" growingThreshold="20" growingScrollToLoad="true" items="{path:'oDocumentModel>/',templateShareable:true }">
		<infoToolbar>
			<Toolbar width="100%" height="auto" design="Auto" visible="false" enabled="true">
				<content>
					<Label text="No. de Documento:{oDocumentModel>nroDoc}" design="Standard" width="100%" required="false" textAlign="Begin"
						textDirection="Inherit" visible="true"/>
				</content>
			</Toolbar>
		</infoToolbar>
		<headerToolbar/>
		<columns>
			<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
				<header>
					<Text text="" width="0" maxLines="0" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="false"/>
				</header>
				<footer/>
			</Column>
		</columns>
		<items>
			<ColumnListItem type="Inactive">
				<cells>
					<VBox alignItems="Stretch" direction="Column" fitContainer="false" width="auto" height="auto" justifyContent="Start" renderType="Div"
						visible="true" displayInline="false">
						<items>
							<Table width="100%" noDataText="No data" mode="None" showSeparators="All" growing="true" growingThreshold="20" growingScrollToLoad="true"
								items="{path:'oDocumentModel>historial',templateShareable:true}">
								<infoToolbar>
									<Toolbar width="100%">
										<content>
												
											<Button text="{oDocumentModel>NroDoc}" icon="sap-icon://notes"  press="navToDetail"/>	
											<core:Icon src="sap-icon://circle-task-2" color="{oDocumentModel>colorEstado}"></core:Icon>
											<Text text="{oDocumentModel>Status}" width="100px" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"
												visible="true"/>
										</content>
									</Toolbar>
								</infoToolbar>
								<headerToolbar/>
								<columns>
									<Column width="10%" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
										<header>
											<Text text="{i18n>appcolumn2}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
										</header>
										<footer/>
									</Column>
									<Column width="10%" hAlign="Center" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
										<header>
											<Text text="{i18n>appcolumn3}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
										</header>
										<footer/>
									</Column>
									<Column width="10%" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
										<header>
											<Text text="{i18n>appcolumn4}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
										</header>
										<footer/>
									</Column>
									<Column width="5%" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
										<header>
											<Text text="{i18n>appcolumn5}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
										</header>
										<footer/>
									</Column>
									<Column width="30px" hAlign="Center" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
										<header></header>
										<footer/>
									</Column>
									<Column width="15%" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
										<header>
											<Text text="{i18n>appcolumn6}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
										</header>
										<footer/>
									</Column>
								</columns>
								<items>
									<ColumnListItem type="Inactive">
										<cells>
											<Text text="{oDocumentModel>fechaRegistro}" width="auto" maxLines="3" wrapping="true" textAlign="Begin" textDirection="Inherit"
												visible="true"/>
											<Text text="{oDocumentModel>nivelAprobacion}" width="auto" maxLines="3" wrapping="true" textAlign="Begin" textDirection="Inherit"
												visible="true"/>
											<Text text="{oDocumentModel>aprobador}" width="auto" maxLines="3" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
											<Text text="{oDocumentModel>estado}" width="auto" maxLines="3" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
											<core:Icon src="sap-icon://circle-task-2" color="{oDocumentModel>colorSubEstado}"></core:Icon>
											<Text text="{oDocumentModel>MotivoRechazo}" width="auto" maxLines="3" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</items>
						<layoutData/>
					</VBox>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>