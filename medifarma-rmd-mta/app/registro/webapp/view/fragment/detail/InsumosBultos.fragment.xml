<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout"
    xmlns:form="sap.ui.layout.form" xmlns:fb="sap.ui.comp.filterbar" xmlns:mvc="sap.ui.core.mvc" >
    <Dialog title="{i18n>tlListInsumos}" contentWidth="80%" afterClose="onCerrarListInsumos">
        <content>
            <form:Form editable="true" visible="{visible>/state}">
                <form:formContainers>
                    <form:FormContainer>
                        <form:formElements>
                            <form:FormElement>
                                <form:label>
                                    <Label text="{i18n>lblLote}" design="Bold"/>
                                </form:label>
                                <form:fields>
                                    <Text text="{modelGeneral>/LineaActualRMD/Charg}"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement>
                                <form:label>
                                    <Label text="{i18n>lblOrden}" design="Bold"/>
                                </form:label>
                                <form:fields>
                                    <Text text="{modelGeneral>/LineaActualRMD/Aufnr}"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement>
                                <form:label>
                                    <Label text="{i18n>lblCodigo}" design="Bold"/>
                                </form:label>
                                <form:fields>
                                    <Text text="{modelGeneral>/LineaActualRMD/Matnr}"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement>
                                <form:label>
                                    <Label text="{i18n>clFraccion}" design="Bold"/>
                                </form:label>
                                <form:fields>
                                    <Text text="{asociarDatos>/aEstructura/results/0/fraccion}"/>
                                </form:fields>
                            </form:FormElement>
                        </form:formElements>
                    </form:FormContainer>
                    <form:FormContainer>
                        <form:formElements>
                            <form:FormElement>
                                <form:label>
                                    <Label text="{i18n>lblExpira}" design="Bold"/>
                                </form:label>
                                <form:fields>
                                    <Text text="{path: 'modelGeneral>/LineaActualRMD/VfdatBTP', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'yyyy/MM/dd', UTC: true }}"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement>
                                <form:label>
                                    <Label text="{i18n>lblEtapa}" design="Bold"/>
                                </form:label>
                                <form:fields>
                                    <Text text="{asociarDatos>/mdId/nivelTxt}"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement>
                                <form:label>
                                    <Label text="{i18n>lblArticulo}" design="Bold"/>
                                </form:label>
                                <form:fields>
                                    <Text text="{modelGeneral>/LineaActualRMD/Maktx}"/>
                                </form:fields>
                            </form:FormElement>
                        </form:formElements>
                        <form:title/>
                    </form:FormContainer>
                </form:formContainers>
                <form:layout>
                    <form:ResponsiveGridLayout adjustLabelSpan="true" columnsL="2" labelSpanL="4" columnsM="2" labelSpanM="2" labelSpanS="12"/>
                </form:layout>
            </form:Form>
            <Table id="tblInsumos" width="auto" sticky="ColumnHeaders" items="{path:'aListPedidoConsolidado>/'}" updateFinished="onColorTableInsumo" noDataText="{i18n>tblNoData}" itemPress="onDetailRmd" popinChanged="onColorTableInsumo">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="{i18n>tblInsumos} ({=${aListPedidoConsolidado>/}.length})"></Title>
                        <ToolbarSpacer/>
                        <ToolbarSeparator/>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column width="7%" hAlign="Center" vAlign="Center" demandPopin="true" minScreenWidth="Tablet" popinDisplay="Inline" styleClass="cellBorderRight">
                        <Text text="{i18n>clMasivo}" width="auto"/>
                    </Column>
                    <Column width="10%" hAlign="Center" vAlign="Center" demandPopin="true" minScreenWidth="Tablet" popinDisplay="Inline" styleClass="cellBorderRight">
                        <Text text="{i18n>clCantidadBultos}" width="auto"/>
                    </Column>
                    <Column width="25%" hAlign="Left" vAlign="Middle" demandPopin="true" minScreenWidth="Tablet" popinDisplay="Inline" styleClass="cellBorderRight">
                        <Text text="{i18n>clMaterial}" width="auto"/>
                    </Column>
                    <Column width="13%" hAlign="Left" vAlign="Middle" demandPopin="true" minScreenWidth="Tablet" popinDisplay="Inline" styleClass="cellBorderRight">
                        <Text text="{i18n>clLote}" width="auto"/>
                    </Column>
                    <Column width="7%" hAlign="Left" vAlign="Middle" demandPopin="true" minScreenWidth="Tablet" popinDisplay="Inline" styleClass="cellBorderRight">
                        <Text text="{i18n>clAdicional}" width="auto"/>
                    </Column>
                    <Column  width="5%" hAlign="Left" vAlign="Middle" demandPopin="true" minScreenWidth="Tablet" popinDisplay="Inline" styleClass="cellBorderRight">
                        <Text text="{i18n>clIFA}" width="auto"/>
                    </Column>
                    <Column width="10%" hAlign="End" vAlign="Middle" demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline" styleClass="cellBorderRight">
                        <Text text="{i18n>clCantDespachada}" width="auto"/>
                    </Column>
                    <Column width="5%" hAlign="End" vAlign="Middle" demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline" styleClass="cellBorderRight">
                        <Text text="{i18n>clCantidadOP}" width="auto"/>
                    </Column>
                    <Column width="8%" hAlign="End" vAlign="Middle" demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline" styleClass="cellBorderRight">
                        <Text text="{i18n>clCantidadVerificada}" width="auto"/>
                    </Column>
                    <Column width="5%" hAlign="Left" vAlign="Middle" demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline" styleClass="cellBorderRight">
                        <Text text="{i18n>clUnidadMedida}" width="auto"/>
                    </Column>
                    <Column width="5%" hAlign="Left" vAlign="Middle" demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline" styleClass="cellBorderRight">
                        <Text text="{i18n>clFraccion}" width="auto"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem vAlign="Middle">
                        <CheckBox selected="{aListPedidoConsolidado>checkboxMasivo}" enabled="{generalModelState>/state}"/>
                        <Link text="{aListPedidoConsolidado>cantidadBulto}" press="onGetBultoDetalle" textAlign="Center"/>
                        <Text text="{aListPedidoConsolidado>insumoCodigo} - {aListPedidoConsolidado>insumoDescrip}" width="auto"/>
                        <Text text="{aListPedidoConsolidado>insumoLote}" width="auto"/>
                        <Text text="{aListPedidoConsolidado>adicional}" width="auto"/>
                        <CheckBox selected="{aListPedidoConsolidado>ifa}" enabled="false"/>
                        <Text text="{aListPedidoConsolidado>cantPedida}" width="auto"/>
                        <Text text="{aListPedidoConsolidado>cantidadOP}" width="auto"/>
                        <Text text="{aListPedidoConsolidado>cantAtendida}" width="auto"/>
                        <Text text="{aListPedidoConsolidado>insumoUmb}" width="auto"/>
                        <Text text="{aListPedidoConsolidado>fraccion}" width="auto"/>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <endButton>
            <Button text="{i18n>btnClose}" press="onCerrarListInsumos" type="Reject"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>