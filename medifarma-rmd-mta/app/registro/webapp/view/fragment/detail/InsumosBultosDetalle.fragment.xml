<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:form="sap.ui.layout.form">
    <Dialog class="sapUiContentPadding sapUiSizeCompact" title="{i18n>tlListInsumos}" contentWidth="60%" afterClose="onCerrarBultoDetalle">
        <content>
            <form:Form width="100%" editable="true" visible="{visible>/state}">
                <form:formContainers>
                    <form:FormContainer>
                        <form:formElements>
                            <form:FormElement>
                                <form:label>
                                    <Label text="{i18n>lblLote}" design="Bold" width="100%"/>
                                </form:label>
                                <form:fields>
                                    <Text text="{modelGeneral>/oLineaSeleccionada/insumoLote}" width="auto"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement>
                                <form:label>
                                    <Label text="{i18n>lblCodigo}" design="Bold" width="100%"/>
                                </form:label>
                                <form:fields>
                                    <Text text="{modelGeneral>/oLineaSeleccionada/insumoCodigo}" width="auto"/>
                                </form:fields>
                            </form:FormElement>
                        </form:formElements>
                    </form:FormContainer>
                    <form:FormContainer>
                        <form:formElements>
                            <form:FormElement>
                                <form:label>
                                    <Label text="{i18n>lblInsumo}" design="Bold" width="100%"/>
                                </form:label>
                                <form:fields>
                                    <Text text="{modelGeneral>/oLineaSeleccionada/insumoDescrip}" width="auto"/>
                                </form:fields>
                            </form:FormElement>
                        </form:formElements>
                        <form:title/>
                    </form:FormContainer>
                </form:formContainers>
                <form:layout>
                    <form:ResponsiveGridLayout adjustLabelSpan="false" columnsL="2" labelSpanL="3" columnsM="2" labelSpanM="2" labelSpanS="12"/>
                </form:layout>
            </form:Form>
            <Table width="auto" sticky="ColumnHeaders" items="{path:'aListDetalleInsumo>/'}" noDataText="{i18n>tblNoData}" mode="None">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="{i18n>tblInsumos} ({=${aListDetalleInsumo>/}.length})"></Title>
                        <ToolbarSpacer/>
                        <ToolbarSeparator/>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column width="auto" hAlign="Center" vAlign="Middle" demandPopin="true" minScreenWidth="Tablet" popinDisplay="Inline" styleClass="cellBorderRight">
                        <Text text="{i18n>clEstado}" width="auto"/>
                    </Column>
                    <Column width="auto" hAlign="Left" vAlign="Middle" demandPopin="true" minScreenWidth="Tablet" popinDisplay="Inline" styleClass="cellBorderRight">
                        <Text text="{i18n>clNumeroBulto}" width="auto"/>
                    </Column>
                     <Column width="auto" hAlign="Left" vAlign="Middle" demandPopin="true" minScreenWidth="Tablet" popinDisplay="Inline" styleClass="cellBorderRight">
                        <Text text="{i18n>clCodigoGrupal}" width="auto"/>
                    </Column>
                    <Column width="auto" hAlign="Left" vAlign="Middle" demandPopin="true" minScreenWidth="Tablet" popinDisplay="Inline" styleClass="cellBorderRight">
                        <Text text="{i18n>clCodigoBulto}" width="auto"/>
                    </Column>
                    <Column width="auto" hAlign="End" vAlign="Middle" demandPopin="true" minScreenWidth="Tablet" popinDisplay="Inline" styleClass="cellBorderRight">
                        <Text text="{i18n>clCantDespachada}" width="auto"/>
                    </Column>
                     <Column width="auto" hAlign="Left" vAlign="Middle" demandPopin="true" minScreenWidth="Tablet" popinDisplay="Inline" styleClass="cellBorderRight">
                        <Text text="{i18n>clUnidadMedida}" width="auto"/>
                    </Column>
                     <Column width="auto" hAlign="End" vAlign="Middle" demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline" styleClass="cellBorderRight">
                        <Text text="{i18n>clPesoNeto}" width="auto"/>
                    </Column>
                    <Column  width="auto" hAlign="End" vAlign="Middle" demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline" styleClass="cellBorderRight">
                        <Text text="{i18n>clPTara}" width="auto"/>
                    </Column>
                    <Column  width="auto" hAlign="End" vAlign="Middle" demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline" styleClass="cellBorderRight">
                        <Text text="{i18n>clPBruto}" width="auto"/>
                    </Column>
                    <Column width="auto" hAlign="Left" vAlign="Middle" demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline" styleClass="cellBorderRight">
                        <Text text="{i18n>clUnidadCP}" width="auto"/>
                    </Column>
                    <Column width="auto" hAlign="Left" vAlign="Middle" demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline" styleClass="cellBorderRight">
                        <Text text="{i18n>clUsuario}" width="auto"/>
                    </Column>
                    <Column width="auto" hAlign="Left" vAlign="Middle" demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline" styleClass="cellBorderRight">
                        <Text text="{i18n>clFecha}" width="auto"/>
                    </Column>
                    <Column width="auto" hAlign="Left" vAlign="Middle" demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline" styleClass="cellBorderRight">
                        <Text text="" width="auto"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <core:Icon src="{aListDetalleInsumo>estadoBulto}" width="auto"/>
                            <Text text="{aListDetalleInsumo>numeroBultos}" width="auto"/>
                            <Text text="{aListDetalleInsumo>codigoGrupal}" width="auto"/>
                            <Text text="{aListDetalleInsumo>codigoBulto}" width="auto"/>
                            <Text text="{aListDetalleInsumo>cantidadDespachada}" width="auto"/>
                            <Text text="{aListDetalleInsumo>unidadMedidad}" width="auto"/>
                            <Text text="{aListDetalleInsumo>BalanzaPeso}" width="auto"/>
                            <Text text="{aListDetalleInsumo>ptara}" width="auto"/>
                            <Text text="{aListDetalleInsumo>pBruto}" width="auto"/>
                            <Text text="{aListDetalleInsumo>BalanzaUnidadM}" width="auto"/>
                            <Text text="{aListDetalleInsumo>usuarioVerifBulto}" width="auto"/>
                            <Text text="{aListDetalleInsumo>fechaVerifBulto}" width="auto"/>
                            <HBox alignItems="Center">
                                <Button icon="sap-icon://bar-code" tooltip="{i18n>btnBarcode}" press="onValidationBulto" type="Emphasized" enabled="{aListDetalleInsumo>bEnabledVer}"/>
                                <Button icon="sap-icon://undo" tooltip="{i18n>btnUndo}" press="onDeleteValidation" type="Emphasized" enabled="{aListDetalleInsumo>bEnabledRev}"/>
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <endButton>
            <Button text="{i18n>btnClose}" press="onCerrarBultoDetalle" type="Reject"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>