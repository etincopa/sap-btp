<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog title="Ver Clasificaciones">
	<Table id="tblClasificaciones" width="auto" sticky="ColumnHeaders" 
		items="{path: 'localModel>/aListAgrupadores'}" 
		growing="true" growingScrollToLoad="true" mode="MultiSelect">
		<headerToolbar>
			<OverflowToolbar>
				<Title text="{i18n>aListClasificacion}"/>
				<ToolbarSpacer/>
				<SearchField search="onSearchAgrupadores" width="30%"/>
				<ToolbarSeparator/>
				<OverflowToolbarButton tooltip="{i18n>btnNew}" icon="sap-icon://add" press="onAddClasificacion"/>
				<OverflowToolbarButton tooltip="{i18n>btnDelete}" icon="sap-icon://delete" press="onDeleteClasificacion"/>
			</OverflowToolbar>
		</headerToolbar>
		<columns>
			<Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
				<Text text="{i18n>lblDescription}" width="auto" maxLines="2" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
			</Column>
			<Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
				<Text text="{i18n>trazUsuario}" width="auto" maxLines="2" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem type="Navigation" press="onPressAgrupador">
				<Text text="{localModel>descripcion}" width="auto" maxLines="3" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
				<Text text="{localModel>usuarioRegistro}" width="auto" maxLines="3" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
			</ColumnListItem>
		</items>
	</Table>
    <endButton>
			<Button text="{i18n>btnCerrar}" press="onCancelClasificacion" type="Transparent"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>