<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog title="Ver RM Asociadas" afterClose="onCancelOpenRMA">
    <ScrollContainer width="100%" height="100%" horizontal="true" vertical="true" focusable="true">
		<Table id="tblRMAutensilio" width="auto" sticky="ColumnHeaders" 
            items="{path: 'mainModelv2>/MD_ES_UTENSILIO',
                parameters: { 'expand' : 'mdId,mdId/nivelId,mdId/estadoIdRmd,mdId/aReceta/recetaId'},
                filters: [{
                    path: 'activo',
                    operator: 'EQ',
                    value1: 'true'
                }]}" 
            updateFinished="onUpdateFinish" growing="true"
			growingScrollToLoad="true">
			<headerToolbar>
				<OverflowToolbar>
					<Title text="{i18n>RMAsocUtensil}"/>
					<ToolbarSpacer/>
					<ToolbarSeparator/>
                    <OverflowToolbarButton text="{i18n>btnExportRMAUtensilio}" tooltip="{i18n>btnExport}" icon="sap-icon://excel-attachment" press="onExportExcel"/>
				</OverflowToolbar>
			</headerToolbar>
			<columns>
				<Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
					<Text text="{i18n>RMAsocCod}" width="auto" maxLines="2" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
				</Column>
				<Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
					<Text text="{i18n>RMAsocManu}" width="auto" maxLines="2" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
				</Column>
				<Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
					<Text text="{i18n>RMAsocNiv}" width="auto" maxLines="2" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
				</Column>
				<!-- <Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
					<Text text="{i18n>RMAsocArt}" width="auto" maxLines="2" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
				</Column> --> 
				<Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
					<Text text="{i18n>RMAsocEst}" width="auto" maxLines="2" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem>
					<Text text="{mainModelv2>mdId/codigo}" width="auto" maxLines="3" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
					<Text text="{mainModelv2>mdId/descripcion}" width="auto" maxLines="3" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
					<Text text="{mainModelv2>mdId/nivelTxt}" width="auto" maxLines="3" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
					<!-- <Text text="{mainModelv2>pasoId_pasoId}" width="auto" maxLines="3" wrapping="true" textAlign="Begin" textDirection="Inherit"/> -->
					<Text text="{mainModelv2>mdId/estadoIdRmd/contenido}" width="auto" maxLines="3" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
				</ColumnListItem>
			</items>
		</Table>
	</ScrollContainer>
  <endButton>
			<Button text="{i18n>btnCerrar}" press="onCancelOpenRMAUtensilio" type="Transparent"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>