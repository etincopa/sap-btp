<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<ScrollContainer width="100%" height="80%" horizontal="true" vertical="true" focusable="true">
		<Table items="{localModel>/lineaAddDocumentos/adjuntos}">
            <headerToolbar>
                <OverflowToolbar>
                    <content>
                        <ToolbarSpacer />
                        <u:FileUploader id="fileUploaderAddDoc" tooltip="Agregar Documento" change="onSubirAdjuntoEdit" icon="sap-icon://upload" iconOnly="true" buttonOnly="true"/>
                    </content>
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column width="3em">
                    <Text text="" />
                </Column>
                <Column>
                    <Text text="Nombre" />
                </Column>
                <Column hAlign="End">
                    <Text text=""/>
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <core:Icon src="sap-icon://pdf-attachment"/>
                        <Link text="{localModel>Name}" enabled="{=${localModel>nuevo} === true ? false : true}" press="onDownloadAdjuntoMD"/>
                        <Button icon="sap-icon://decline" type="Transparent" press="onEliminarDocumentoMD" enabled="{localModel>enabled}"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
	</ScrollContainer>
</core:FragmentDefinition>