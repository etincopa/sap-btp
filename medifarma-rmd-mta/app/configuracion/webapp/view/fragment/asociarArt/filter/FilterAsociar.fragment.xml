<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:fb="sap.ui.comp.filterbar">
	

  <ScrollContainer width="100%" height="80%" horizontal="true" vertical="true" focusable="true">
    <VBox class="sapUiSmallMargin">
      <f:SimpleForm id="idForm"
        editable="true"
			layout="ResponsiveGridLayout"
        columnsL="3" >
        <f:content>
          <core:Title text="" />
          <Label text="{i18n>asocAgrupador}" />
          <Input  value="{asociarDatos>/codAgrupadorRecetaBK}" editable="{localModel>/esRegistrador}"/>
          <Label text="{i18n>asocDesc}" />
          <Input  value="{asociarDatos>/descripcion}" editable="false"/>
          <Label text="{i18n>asocCod}" />
          <Input  value="{asociarDatos>/codDefectoRecetaBK}" editable="{localModel>/esRegistrador}"/>
          <Label text="{i18n>asocFecha}" />
          <Input value="{path: 'asociarDatos>/fechaSolicitud', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd/MM/yyyy', UTC: false }}" editable="false"/>
          <Label text="{i18n>asocRpt}" />
          <HBox>
            <Input  value="{asociarDatos>/rptaValidacionBK}" editable="{localModel>/esRegistrador}"/>
            <Input  value="{path: 'asociarDatos>/rptaValidacionDate', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd/MM/yyyy hh:mm:ss', UTC: false }}" editable="false"/>
          </HBox>
          <core:Title text="" />
          <Label text="{i18n>asocNivel}" />
          <Input  value="{asociarDatos>/nivelTxt}" editable="false"/>
          <Label text="{i18n>asocArea}" />
          <Input  value="{asociarDatos>/areaRmdTxt}" editable="false"/>
          <Label text="{i18n>asocReceta}" />
          <Switch state="{asociarDatos>/masRecetasBK}" customTextOn=" " customTextOff=" " enabled="{localModel>/esJefeDT}">
            <layoutData>
              <FlexItemData growFactor="1" />
            </layoutData>
          </Switch>
          <Label text="{i18n>asocSucursal}" />
          <Input  value="{asociarDatos>/sucursalId/contenido}" editable="false"/>
          <Label text="{i18n>asocEstado}" />
          <ComboBox items="{
            path : 'mainModel>/ESTADORMD',
            filters: [{
                path: 'campo1',
                operator: 'NE',
                value1: 'SOLICITUD'
            }]
            }" placeholder="{i18n>asocEstado}" selectedKey="{asociarDatos>/estadoIdRmd_iMaestraIdBK}" editable="{localModel>/esJefeDT}" change="onChangeEstadoFormula" > 
            <core:ListItem key="{mainModel>iMaestraId}" text="{mainModel>contenido}"/>
          </ComboBox>
          <core:Title text="" />
          <Label text="{i18n>asocMot}" />
          <Input  value="{asociarDatos>/motivoId/descripcion}" editable="false"/>
          <Label text="{i18n>asocRMD}" />
          <Input  value="{asociarDatos>/af}" editable="false"/>
          <Label text="{i18n>asocObs}" />
          <TextArea height="70px" placeholder="Escribir observacion" value="{asociarDatos>/observacionBK}" maxLength="1000" editable="{localModel>/esRegistrador}"/>
        </f:content>
      </f:SimpleForm>
    </VBox>
	</ScrollContainer>
</core:FragmentDefinition>