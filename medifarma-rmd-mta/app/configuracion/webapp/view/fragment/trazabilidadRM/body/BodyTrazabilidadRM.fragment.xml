<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<!-- <ScrollContainer width="100%" height="80%" horizontal="true" vertical="true" focusable="true"> -->
		<Table width="auto" sticky="ColumnHeaders" items="{localModel>/lineaTrazabilidad}" updateFinished="onUpdateFinish" growing="true"
			growingScrollToLoad="true">
			<headerToolbar>
				<OverflowToolbar>
					<Title text="RM - {asociarDatos>/descripcion}"/>
				</OverflowToolbar>
			</headerToolbar>
			<columns>
				<Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
					<Text text="{i18n>trazEstado}" width="auto" maxLines="2" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
				</Column>
				<Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
					<Text text="{i18n>trazRegistrado}" width="auto" maxLines="2" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
				</Column>
				<Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
					<Text text="{i18n>trazUsuario}" width="auto" maxLines="2" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem>
					<ObjectStatus text="{localModel>estadoTrazab/contenido}" state="{localModel>state}"/>
					<Text text="{path: 'localModel>fechaRegistro', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd/MM/yyyy hh:mm:ss', UTC: false }}" width="auto" maxLines="3" wrapping="true"/>
					<Text text="{localModel>usuarioRegistro}" width="auto" maxLines="3" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
				</ColumnListItem>
			</items>
		</Table>
	<!-- </ScrollContainer> -->
</core:FragmentDefinition>