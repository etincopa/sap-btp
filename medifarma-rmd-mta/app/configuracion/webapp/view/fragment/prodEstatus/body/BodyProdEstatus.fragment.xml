<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<ScrollContainer width="100%" height="80%" horizontal="true" vertical="true" focusable="true">
		<Table width="auto" sticky="ColumnHeaders" items="{path: 'localModel>/lineaStatusProd',
				sorter: {
					path: 'fechaRegistro'
				}}" updateFinished="onUpdateFinish" growing="true"
			growingScrollToLoad="true">
			<headerToolbar>
				<OverflowToolbar>
					<Title text="RM - {localModel>/lineaStatusProd/0/mdId/descripcion}"></Title>
					<ToolbarSpacer/>
					<ToolbarSeparator/>
					<OverflowToolbarButton tooltip="Descargar Adjuntos" icon="sap-icon://browse-folder" press="onDownloadAdjuntoProd"/>
				</OverflowToolbar>
			</headerToolbar>
			<columns>
				<Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
					<Text text="{i18n>prodEUser}" width="auto" maxLines="2" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
				</Column>
				<Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
					<Text text="{i18n>prodEEst}" width="auto" maxLines="2" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
				</Column>
				<Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
					<Text text="{i18n>prodEMens}" width="auto" maxLines="2" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
				</Column>
				<Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
					<Text text="{i18n>prodEObs}" width="auto" maxLines="2" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
				</Column>
				<Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
					<Text text="{i18n>prodESol}" width="auto" maxLines="2" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
				</Column>
				<Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
					<Text text="{i18n>prodEResp}" width="auto" maxLines="2" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem>
					<Text text="{localModel>usuarioRegistro}" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
					<ObjectStatus text="{path: 'localModel>estadoIdProceso/contenido',formatter: '.formatter.onGetStateTableStatus'}" state="{localModel>state}"/>
					<Text text="{localModel>mensajeDT}" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
					<Text text="{localModel>observacion}" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
                    <Text text="{path: 'localModel>fechaDT', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd/MM/yyyy hh:mm:ss', UTC: false }}" wrapping="true"/>
                    <Text text="{path: 'localModel>fechaRegistro', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd/MM/yyyy hh:mm:ss', UTC: false }}" wrapping="true"/>
				</ColumnListItem>
			</items>
		</Table>
	</ScrollContainer>
</core:FragmentDefinition>