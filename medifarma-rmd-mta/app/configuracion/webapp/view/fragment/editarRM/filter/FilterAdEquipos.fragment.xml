<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:fb="sap.ui.comp.filterbar">
	<fb:FilterBar header="Filtros" reset="onRestoreFilters" search="onSearchEquipment" useToolbar="false" showGoOnFB="true"
		showFilterConfiguration="false" showRestoreOnFB="false" showRestoreButton="false">
		<fb:filterGroupItems>
			<fb:FilterGroupItem groupName="MANGROUP" name="A" label="Cod. Equipo" partOfCurrentVariant="true" visibleInFilterBar="true">
				<fb:control>
					<Input value="{oDataFilterEquipoUtensilio>/codigo}" placeholder="Cod. Equipo" showValueHelp="false" visible="true" width="100%"
						valueHelpOnly="false"/>
				</fb:control>
			</fb:FilterGroupItem>
			<fb:FilterGroupItem groupName="MANGROUP" name="B" label="Descripción" partOfCurrentVariant="true" visibleInFilterBar="true">
				<fb:control>
					<Input value="{oDataFilterEquipoUtensilio>/descript}" placeholder="Descripción" showValueHelp="false" visible="true" width="100%"
						valueHelpOnly="false"/>
				</fb:control>
			</fb:FilterGroupItem>
      		<fb:FilterGroupItem groupName="MANGROUP" name="C" label="Cod. GACI" partOfCurrentVariant="true" visibleInFilterBar="true">
				<fb:control>
					<Input value="{oDataFilterEquipoUtensilio>/codGaci}" placeholder="Cod. GACI" showValueHelp="false" visible="true" width="100%"
						valueHelpOnly="false"/>
				</fb:control>
			</fb:FilterGroupItem>
			<fb:FilterGroupItem groupName="MANGROUP" name="D" label="Estado" partOfCurrentVariant="true" visibleInFilterBar="true">
				<fb:control>
          			<Input value="{oDataFilterEquipoUtensilio>/estado}" placeholder="Estado" showValueHelp="false" visible="true" width="100%"
						valueHelpOnly="false"/>
				</fb:control>
			</fb:FilterGroupItem>
			<fb:FilterGroupItem groupName="MANGROUP" name="E" label="Área" partOfCurrentVariant="true" visibleInFilterBar="true">
				<fb:control>
          			<Input value="{oDataFilterEquipoUtensilio>/area}" placeholder="Estado" showValueHelp="false" visible="true" width="100%"
						valueHelpOnly="false"/>
				</fb:control>
			</fb:FilterGroupItem>
		</fb:filterGroupItems>
	</fb:FilterBar>
</core:FragmentDefinition>