<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:fb="sap.ui.comp.filterbar">
	<fb:FilterBar header="Filtros" reset="onRestoreFilters" search="onSearch" useToolbar="false" showGoOnFB="{=${modelGeneral>/oInfoUsuario/funcionUsuario} ? true : false}"
		showFilterConfiguration="false" showRestoreOnFB="{=${modelGeneral>/oInfoUsuario/funcionUsuario} ? true : false}" showRestoreButton="false">
		<fb:filterGroupItems>
            <fb:FilterGroupItem groupName="MANGROUP" name="Z" label="Aplicación" partOfCurrentVariant="true" visibleInFilterBar="true">
				<fb:control>
					<ComboBox items="{
                        path : 'modelGeneral>/aListaApps'
                        }" 
                        placeholder="Seleccione Aplicación" selectedKey="{modelGeneral>/aFilters/aplicacionId}" change="onSelectAplicacion" required="true">
                        <core:ListItem key="{modelGeneral>aplicacionId}" text="{modelGeneral>descripcion}"/>
                    </ComboBox>
				</fb:control>
			</fb:FilterGroupItem>
            <fb:FilterGroupItem groupName="MANGROUP" name="A" label="Código de Material" partOfCurrentVariant="true" visibleInFilterBar="true" visible="{=${modelGeneral>/aFilters/aplicacionId} === '3b5fc15f-3dcb-4c0f-8927-8ba26964da38'}">
				<fb:control>
					<ComboBox items="{path : 'modelGeneral>/aListRecetas'}" 
                        placeholder="Seleccione Material" selectedKey="{modelGeneral>/aFilters/recetaId}"
                        showSecondaryValues="true" filterSecondaryValues="true">
                        <core:ListItem key="{modelGeneral>recetaId}" text="{modelGeneral>Text1}" additionalText="{modelGeneral>Matnr}"/>
                    </ComboBox>
				</fb:control>
			</fb:FilterGroupItem>
			<fb:FilterGroupItem groupName="MANGROUP" name="B" label="{i18n>lblCodeRMD}" partOfCurrentVariant="true" visibleInFilterBar="true" visible="{=${modelGeneral>/aFilters/aplicacionId} === '3b5fc15f-3dcb-4c0f-8927-8ba26964da38'}">
				<fb:control>
					<Input value="{modelGeneral>/aFilters/codigoSolicitud}" placeholder="Ingrese Código de Solicitud" type="Text" showValueHelp="false" visible="true" width="100%"
						valueHelpOnly="false"/>
				</fb:control>
			</fb:FilterGroupItem>
            <fb:FilterGroupItem groupName="MANGROUP" name="C" label="{i18n>clCodeRMD}" partOfCurrentVariant="true" visibleInFilterBar="true" visible="{=${modelGeneral>/aFilters/aplicacionId} === '295fd633-d654-49b6-86a0-674611a3b783'}">
				<fb:control>
					<Input value="{modelGeneral>/aFilters/codigoRMD}" placeholder="{i18n>phlblCodeRMD}" type="Text" showValueHelp="false" visible="true" width="100%"
						valueHelpOnly="false"/>
				</fb:control>
			</fb:FilterGroupItem>
			<fb:FilterGroupItem groupName="MANGROUP" name="D" label="{i18n>lblNameRMD}" partOfCurrentVariant="true" visibleInFilterBar="true">
				<fb:control>
					<Input value="{modelGeneral>/aFilters/nombreRMD}" placeholder="{i18n>phlblNameRMD}" type="Text" showValueHelp="false" visible="true"
						width="100%" valueHelpOnly="false"/>
				</fb:control>
			</fb:FilterGroupItem>
			<fb:FilterGroupItem groupName="MANGROUP" name="E" label="{i18n>lblPlant}" partOfCurrentVariant="true" visibleInFilterBar="true">
				<fb:control>
					<ComboBox items="{
                        path : 'mainModel>/MAESTRA',
                        filters: [{
                            path: 'oMaestraTipo_maestraTipoId',
                            operator: 'EQ',
                            value1: '18'
                        }]
                        }" 
                        placeholder="{i18n>phlblPlant}" selectedKey="{modelGeneral>/aFilters/sucursal}"
                        showSecondaryValues="true" filterSecondaryValues="true">
                        <core:ListItem key="{mainModel>iMaestraId}" text="{mainModel>contenido}" additionalText="{mainModel>codigo}"/>
                    </ComboBox>
				</fb:control>
			</fb:FilterGroupItem>
            <fb:FilterGroupItem groupName="MANGROUP" name="F" label="{i18n>lblSection}" partOfCurrentVariant="true" visibleInFilterBar="true">
				<fb:control>
                    <ComboBox items="{modelGeneral>/aListaSecciones}" placeholder="{i18n>phlblSection}" selectedKey="{modelGeneral>/aFilters/seccion}"
                        showSecondaryValues="true" filterSecondaryValues="true" editable="{=${modelGeneral>/aListaSecciones}.length === 0 ? false : true}">
                        <core:ListItem key="{modelGeneral>Atwrt}" text="{modelGeneral>Atwrt}" additionalText="{modelGeneral>Atzhl}"/>
                    </ComboBox>
				</fb:control>
			</fb:FilterGroupItem>
			<fb:FilterGroupItem groupName="MANGROUP" name="G" label="{i18n>lblDestinations}" partOfCurrentVariant="true" visibleInFilterBar="true">
				<fb:control>
					<Input value="{modelGeneral>/aFilters/destinatariosMD}" placeholder="Destinatarios" type="Text" showValueHelp="false" visible="true" 
                    width="100%" valueHelpOnly="false"/>
				</fb:control>
			</fb:FilterGroupItem>
            <fb:FilterGroupItem groupName="MANGROUP" name="H" label="Estado de solicitud" partOfCurrentVariant="true" visibleInFilterBar="true" visible="{=${modelGeneral>/aFilters/aplicacionId} === '3b5fc15f-3dcb-4c0f-8927-8ba26964da38'}">
				<fb:control>
                    <ComboBox items="{
                        path : 'mainModel>/MAESTRA',
                        filters: [{
                            path: 'oMaestraTipo_maestraTipoId',
                            operator: 'EQ',
                            value1: '49'
                        },{
                            path: 'campo1',
                            operator: 'EQ',
                            value1: 'SOLICITUD'
                        }]
                        }" 
                        placeholder="Estado solicitud" selectedKey="{modelGeneral>/aFilters/estadoSolicitud}"
                        showSecondaryValues="true" filterSecondaryValues="true">
                        <core:ListItem key="{mainModel>iMaestraId}" text="{mainModel>contenido}"/>
                    </ComboBox>
				</fb:control>
			</fb:FilterGroupItem>
            <fb:FilterGroupItem groupName="MANGROUP" name="I" label="Estado de proceso" partOfCurrentVariant="true" visibleInFilterBar="true" visible="{=${modelGeneral>/aFilters/aplicacionId} === '295fd633-d654-49b6-86a0-674611a3b783'}">
				<fb:control>
                    <ComboBox items="{
                        path : 'mainModel>/MAESTRA',
                        filters: [{
                            path: 'oMaestraTipo_maestraTipoId',
                            operator: 'EQ',
                            value1: '48'
                        }]
                        }" 
                        placeholder="Estado proceso" selectedKey="{modelGeneral>/aFilters/estadoProceso}"
                        showSecondaryValues="true" filterSecondaryValues="true">
                        <core:ListItem key="{mainModel>iMaestraId}" text="{mainModel>contenido}"/>
                    </ComboBox>
				</fb:control>
			</fb:FilterGroupItem>
            <fb:FilterGroupItem groupName="MANGROUP" name="J" label="Fecha de creación" partOfCurrentVariant="true" visibleInFilterBar="true">
				<fb:control>
                    <DateRangeSelection
                        dateValue="{modelGeneral>/aFilters/fechaInicio}"
                        secondDateValue="{modelGeneral>/aFilters/fechaFin}"
                        displayFormat="dd/MM/yyyy"
                        placeholder="Seleccione un rango de fechas"/>
				</fb:control>
			</fb:FilterGroupItem>
		</fb:filterGroupItems>
	</fb:FilterBar>
</core:FragmentDefinition>