<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Popover showHeader="false" contentWidth="320px" placement="Left" initialFocus="action" ariaLabelledBy="master-title">
        <Table contextualWidth="Auto" items="{ path: 'modelGeneral>/Adjunto' }">
            <headerToolbar>
                <OverflowToolbar>
                    <core:Icon src="sap-icon://pdf-attachment"/>
                    <Title text="Adjuntos" level="H2"/>
                    <ToolbarSpacer/>
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column width="2em">
                    <Text text="" />
                </Column>
                <Column >
                    <Text text="Nombre"/>
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <core:Icon src="sap-icon://pdf-attachment"/>
                        <Link text="{modelGeneral>Name}" press="onDownloadAdjunto" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
        <endButton>
            <Button text="Cerrar" press="onCerrarAdjuntos" type="Transparent"/>
        </endButton>
	</Popover>
</core:FragmentDefinition>